@model List<StudentPerformanceTracker.Data.Entities.AdminManagement.CurriculumManagement>

@{
    ViewData["Title"] = "Curriculum Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .curriculum-card {
        transition: all 0.3s ease;
        border: 1px solid var(--border-color);
        background: var(--white);
        border-radius: 12px;
        margin-bottom: 20px;
    }

    .curriculum-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
    }

    .curriculum-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 20px;
        border-bottom: 1px solid var(--border-color);
    }

    .curriculum-info h5 {
        margin: 0;
        font-size: 18px;
        font-weight: 600;
        color: var(--dark);
    }

    .curriculum-meta {
        display: flex;
        gap: 12px;
        margin-top: 8px;
        flex-wrap: wrap;
    }

    .curriculum-meta-item {
        display: flex;
        align-items: center;
        gap: 6px;
        font-size: 13px;
        color: var(--gray);
    }

    .curriculum-meta-item i {
        color: var(--primary);
    }

    .curriculum-body {
        padding: 20px;
    }

    .curriculum-stats {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: 16px;
        margin-bottom: 16px;
    }

    .stat-box {
        text-align: center;
        padding: 16px;
        background: var(--light-gray);
        border-radius: 8px;
    }

    .stat-box h6 {
        font-size: 24px;
        font-weight: 700;
        color: var(--primary);
        margin: 0;
    }

    .stat-box p {
        font-size: 12px;
        color: var(--text-muted);
        margin: 4px 0 0 0;
    }

    .curriculum-actions {
        display: flex;
        gap: 8px;
    }

    .filter-section {
        background: var(--card-bg);
        border-radius: 12px;
        padding: 24px;
        margin-bottom: 24px;
        border: 1px solid var(--border-color);
    }

    .filter-section .form-label {
        margin-bottom: 8px;
        display: block;
        font-size: 12px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .filter-section .form-control,
    .filter-section .form-select {
        height: 42px;
        border-radius: 8px;
    }

    .filter-badge {
        background: var(--primary);
        color: white;
        padding: 4px 12px;
        border-radius: 12px;
        font-size: 13px;
        font-weight: 600;
    }

    .report-dropdown {
        position: relative;
    }

    .report-btn {
        width: 100%;
        height: 42px;
        padding: 0 16px;
        border-radius: 8px;
        border: 1px solid var(--border-color);
        background: var(--card-bg);
        color: var(--text-primary);
        font-weight: 500;
        font-size: 14px;
        cursor: pointer;
        transition: all 0.2s;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .report-btn:hover {
        background: var(--primary);
        color: white;
        border-color: var(--primary);
    }

    .report-btn i:first-child {
        font-size: 16px;
    }

    .report-btn i:last-child {
        font-size: 12px;
        transition: transform 0.2s;
    }

    .report-btn:hover i:last-child {
        transform: rotate(180deg);
    }

    .report-menu {
        position: absolute;
        top: calc(100% + 8px);
        left: 0;
        right: 0;
        background: var(--card-bg);
        border: 1px solid var(--border-color);
        border-radius: 8px;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
        z-index: 1000;
        display: none;
        overflow: hidden;
    }

    .report-menu.active {
        display: block;
        animation: slideDown 0.2s ease;
    }

    @@keyframes slideDown {
        from {
            opacity: 0;
            transform: translateY(-10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .report-menu-item {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 12px 16px;
        cursor: pointer;
        transition: all 0.2s;
        color: var(--text-primary);
        text-decoration: none;
        font-size: 14px;
        border-bottom: 1px solid var(--border-color);
    }

    .report-menu-item:last-child {
        border-bottom: none;
    }

    .report-menu-item:hover {
        background: var(--light-gray);
        padding-left: 20px;
    }

    .report-menu-item i {
        width: 20px;
        text-align: center;
        font-size: 16px;
    }

    .report-menu-item.pdf i { color: #ef4444; }
    .report-menu-item.excel i { color: #10b981; }
    .report-menu-item.csv i { color: #3b82f6; }
    .report-menu-item.jpg i { color: #f59e0b; }

    [data-theme="dark"] .curriculum-card {
        background-color: var(--card-bg);
        border-color: var(--border-color);
    }
    [data-theme="dark"] .curriculum-info h5 {
        color: var(--text-primary);
    }

    [data-theme="dark"] .report-menu {
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.4);
    }

    @@media (max-width: 768px) {
        .filter-section {
            padding: 16px;
        }

        .filter-section .form-label {
            font-size: 11px;
        }
    }
</style>

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">
                <i class="fas fa-clipboard-list text-primary"></i> Curriculum Management
            </h2>
            <p class="text-muted mb-0">Manage all curriculum programs in the system</p>
        </div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Create New Curriculum
        </a>
    </div>

    <!-- Success/Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Filter Section -->
    <div class="filter-section">
        <div class="row g-3 align-items-end">
            <!-- Search -->
            <div class="col-lg-3 col-md-6">
                <label class="form-label small fw-semibold text-muted mb-2">
                    <i class="fas fa-search me-1"></i> Search
                </label>
                <input type="text" id="searchInput" class="form-control" placeholder="Search by name or code...">
            </div>

            <!-- Grade Level -->
            <div class="col-lg-2 col-md-6">
                <label class="form-label small fw-semibold text-muted mb-2">
                    <i class="fas fa-graduation-cap me-1"></i> Grade Level
                </label>
                <select id="gradeLevelFilter" class="form-select">
                    <option value="">All Grades</option>
                    <option value="7">Grade 7</option>
                    <option value="8">Grade 8</option>
                    <option value="9">Grade 9</option>
                    <option value="10">Grade 10</option>
                </select>
            </div>

            <!-- Status -->
            <div class="col-lg-2 col-md-6">
                <label class="form-label small fw-semibold text-muted mb-2">
                    <i class="fas fa-filter me-1"></i> Status
                </label>
                <select id="statusFilter" class="form-select">
                    <option value="">All Status</option>
                    <option value="active">Active</option>
                    <option value="inactive">Inactive</option>
                </select>
            </div>

            <!-- Academic Year -->
            <div class="col-lg-2 col-md-6">
                <label class="form-label small fw-semibold text-muted mb-2">
                    <i class="fas fa-calendar me-1"></i> Academic Year
                </label>
                <select id="yearFilter" class="form-select">
                    <option value="">All Years</option>
                    @{
                        var currentYear = DateTime.Now.Year;
                        for (int i = 0; i < 5; i++)
                        {
                            var year = currentYear - i;
                            <option value="@($"{year}-{year + 1}")">@($"{year}-{year + 1}")</option>
                        }
                    }
                </select>
            </div>

            <!-- Export Report -->
            <div class="col-lg-3 col-md-12">
                <label class="form-label small fw-semibold text-muted mb-2">
                    <i class="fas fa-file-export me-1"></i> Export
                </label>
                <div class="report-dropdown w-100">
                    <button class="report-btn w-100" id="reportBtn">
                        <i class="fas fa-download"></i>
                        <span>Generate Report</span>
                        <i class="fas fa-chevron-down ms-auto"></i>
                    </button>
                    <div class="report-menu" id="reportMenu">
                        <a href="#" class="report-menu-item pdf" onclick="generateReport('pdf'); return false;">
                            <i class="fas fa-file-pdf"></i>
                            <span>Export as PDF</span>
                        </a>
                        <a href="#" class="report-menu-item excel" onclick="generateReport('excel'); return false;">
                            <i class="fas fa-file-excel"></i>
                            <span>Export as Excel</span>
                        </a>
                        <a href="#" class="report-menu-item csv" onclick="generateReport('csv'); return false;">
                            <i class="fas fa-file-csv"></i>
                            <span>Export as CSV</span>
                        </a>
                        <a href="#" class="report-menu-item jpg" onclick="generateReport('jpg'); return false;">
                            <i class="fas fa-file-image"></i>
                            <span>Export as Image</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Results Count -->
        <div class="mt-3 d-flex align-items-center gap-2">
            <i class="fas fa-info-circle text-primary"></i>
            <span class="small text-muted">Showing</span>
            <span class="filter-badge" id="resultCount">@Model.Count</span>
            <span class="small text-muted">of @Model.Count curriculums</span>
        </div>
    </div>

    <!-- Curriculum List -->
    <div id="curriculumContainer">
        @if (Model.Any())
        {
            foreach (var curriculum in Model)
            {
                <div class="curriculum-card" 
                     data-name="@curriculum.CurriculumName.ToLower()" 
                     data-code="@curriculum.CurriculumCode.ToLower()"
                     data-grade="@curriculum.GradeLevel"
                     data-year="@curriculum.AcademicYear"
                     data-status="@(curriculum.IsActive ? "active" : "inactive")"
                     data-id="@curriculum.CurriculumId"
                     data-semester="@curriculum.Semester"
                     data-subjects="@curriculum.CurriculumSubjects.Count"
                     data-teachers="@curriculum.CurriculumSubjects.Select(cs => cs.TeacherId).Distinct().Count()"
                     data-students="@curriculum.CurriculumStudents.Count"
                     data-description="@(curriculum.Description ?? "")">
                    <div class="curriculum-header">
                        <div class="curriculum-info flex-grow-1">
                            <div class="d-flex align-items-center gap-2">
                                <h5>@curriculum.CurriculumName</h5>
                                <span class="badge bg-primary">@curriculum.CurriculumCode</span>
                                @if (curriculum.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Inactive</span>
                                }
                            </div>
                            <div class="curriculum-meta">
                                <div class="curriculum-meta-item">
                                    <i class="fas fa-calendar"></i>
                                    <span>@curriculum.AcademicYear - @curriculum.Semester</span>
                                </div>
                                <div class="curriculum-meta-item">
                                    <i class="fas fa-graduation-cap"></i>
                                    <span>Grade @curriculum.GradeLevel</span>
                                </div>
                            </div>
                        </div>
                        <div class="curriculum-actions">
                            <a asp-action="Details" asp-route-id="@curriculum.CurriculumId" class="btn btn-info btn-sm">
                                <i class="fas fa-eye"></i> View
                            </a>
                            <a asp-action="Edit" asp-route-id="@curriculum.CurriculumId" class="btn btn-warning btn-sm">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <button type="button" class="btn btn-danger btn-sm" onclick="confirmDelete(@curriculum.CurriculumId, '@curriculum.CurriculumName')">
                                <i class="fas fa-trash"></i> Delete
                            </button>
                        </div>
                    </div>
                    <div class="curriculum-body">
                        <div class="curriculum-stats">
                            <div class="stat-box">
                                <h6>@curriculum.CurriculumSubjects.Count</h6>
                                <p>Subjects</p>
                            </div>
                            <div class="stat-box">
                                <h6>@curriculum.CurriculumSubjects.Select(cs => cs.TeacherId).Distinct().Count()</h6>
                                <p>Teachers</p>
                            </div>
                            <div class="stat-box">
                                <h6>@curriculum.CurriculumStudents.Count</h6>
                                <p>Students Enrolled</p>
                            </div>
                        </div>
                        @if (!string.IsNullOrEmpty(curriculum.Description))
                        {
                            <p class="text-muted small mb-0">@curriculum.Description</p>
                        }
                    </div>
                </div>
            }
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-clipboard-list fa-4x text-muted mb-3"></i>
                <h4 class="text-muted">No Curriculums Found</h4>
                <p class="text-muted">Get started by creating your first curriculum program.</p>
                <a asp-action="Create" class="btn btn-primary mt-3">
                    <i class="fas fa-plus"></i> Create First Curriculum
                </a>
            </div>
        }
    </div>

    <!-- No Results Message -->
    <div id="noResults" class="text-center py-5" style="display: none;">
        <i class="fas fa-search fa-4x text-muted mb-3"></i>
        <h4 class="text-muted">No Curriculums Match Your Search</h4>
        <p class="text-muted">Try adjusting your filters or search terms.</p>
        <button class="btn btn-secondary mt-3" onclick="resetFilters()">
            <i class="fas fa-redo"></i> Reset Filters
        </button>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete <strong id="curriculumName"></strong>?</p>
                <p class="text-danger mb-0">
                    <i class="fas fa-exclamation-triangle"></i> This action cannot be undone and will remove all associated data.
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Add these libraries for export functionality -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf-autotable/3.5.31/jspdf.plugin.autotable.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js"></script>

    <script>
        let allCards = [];
        let filteredCards = [];

        document.addEventListener('DOMContentLoaded', function() {
            allCards = Array.from(document.querySelectorAll('.curriculum-card'));
            filteredCards = [...allCards];
            applyFilters();
        });

        // Report dropdown toggle
        document.getElementById('reportBtn').addEventListener('click', function(e) {
            e.stopPropagation();
            document.getElementById('reportMenu').classList.toggle('active');
        });

        // Close dropdown when clicking outside
        document.addEventListener('click', function(e) {
            const reportDropdown = document.querySelector('.report-dropdown');
            if (!reportDropdown.contains(e.target)) {
                document.getElementById('reportMenu').classList.remove('active');
            }
        });

        document.getElementById('searchInput').addEventListener('input', applyFilters);
        document.getElementById('gradeLevelFilter').addEventListener('change', applyFilters);
        document.getElementById('statusFilter').addEventListener('change', applyFilters);
        document.getElementById('yearFilter').addEventListener('change', applyFilters);

        function applyFilters() {
            const searchTerm = document.getElementById('searchInput').value.toLowerCase();
            const gradeLevelFilter = document.getElementById('gradeLevelFilter').value;
            const statusFilter = document.getElementById('statusFilter').value;
            const yearFilter = document.getElementById('yearFilter').value;

            filteredCards = allCards.filter(card => {
                const name = card.getAttribute('data-name');
                const code = card.getAttribute('data-code');
                const grade = card.getAttribute('data-grade');
                const year = card.getAttribute('data-year');
                const status = card.getAttribute('data-status');

                const matchesSearch = !searchTerm || name.includes(searchTerm) || code.includes(searchTerm);
                const matchesGrade = !gradeLevelFilter || grade === gradeLevelFilter;
                const matchesStatus = !statusFilter || status === statusFilter;
                const matchesYear = !yearFilter || year === yearFilter;

                return matchesSearch && matchesGrade && matchesStatus && matchesYear;
            });

            displayResults();
            updateResultCount();
        }

        function displayResults() {
            const container = document.getElementById('curriculumContainer');
            const noResults = document.getElementById('noResults');

            allCards.forEach(card => card.style.display = 'none');

            if (filteredCards.length === 0) {
                container.style.display = 'none';
                noResults.style.display = 'block';
                return;
            }

            container.style.display = 'block';
            noResults.style.display = 'none';

            filteredCards.forEach(card => {
                card.style.display = 'block';
            });
        }

        function updateResultCount() {
            const totalCount = @Model.Count;
            document.getElementById('resultCount').textContent = filteredCards.length;
            document.querySelector('.mt-3 .small.text-muted:last-child').textContent = `of ${totalCount} curriculums`;
        }

        function resetFilters() {
            document.getElementById('searchInput').value = '';
            document.getElementById('gradeLevelFilter').value = '';
            document.getElementById('statusFilter').value = '';
            document.getElementById('yearFilter').value = '';
            applyFilters();
        }

        function confirmDelete(curriculumId, curriculumName) {
            document.getElementById('curriculumName').textContent = curriculumName;
            document.getElementById('deleteForm').action = '/Admin/Curriculums/Delete/' + curriculumId;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }

        // Generate Report Function
        function generateReport(format) {
            document.getElementById('reportMenu').classList.remove('active');

            const reportData = filteredCards.map(card => {
                return {
                    id: card.getAttribute('data-id'),
                    code: card.getAttribute('data-code').toUpperCase(),
                    name: card.querySelector('.curriculum-info h5').textContent.trim(),
                    grade: 'Grade ' + card.getAttribute('data-grade'),
                    year: card.getAttribute('data-year'),
                    semester: card.getAttribute('data-semester'),
                    status: card.getAttribute('data-status') === 'active' ? 'Active' : 'Inactive',
                    subjects: card.getAttribute('data-subjects'),
                    teachers: card.getAttribute('data-teachers'),
                    students: card.getAttribute('data-students'),
                    description: card.getAttribute('data-description') || 'N/A'
                };
            });

            switch(format) {
                case 'pdf':
                    generatePDF(reportData);
                    break;
                case 'excel':
                    generateExcel(reportData);
                    break;
                case 'csv':
                    generateCSV(reportData);
                    break;
                case 'jpg':
                    generateImage();
                    break;
            }
        }

        // Generate PDF
        function generatePDF(data) {
            const { jsPDF } = window.jspdf;
            const doc = new jsPDF('l', 'mm', 'a4'); // Landscape orientation

            doc.setFontSize(18);
            doc.text('Curriculum Management Report', 14, 20);
            
            doc.setFontSize(11);
            doc.text(`Generated on: ${new Date().toLocaleDateString()}`, 14, 28);
            doc.text(`Total Curriculums: ${data.length}`, 14, 35);

            doc.autoTable({
                startY: 45,
                head: [['ID', 'Code', 'Name', 'Grade', 'Year', 'Semester', 'Status', 'Subjects', 'Teachers', 'Students']],
                body: data.map(c => [c.id, c.code, c.name, c.grade, c.year, c.semester, c.status, c.subjects, c.teachers, c.students]),
                theme: 'striped',
                headStyles: { fillColor: [37, 99, 235] },
                styles: { fontSize: 9 },
                columnStyles: {
                    0: { cellWidth: 15 },
                    1: { cellWidth: 25 },
                    2: { cellWidth: 50 },
                    3: { cellWidth: 20 },
                    4: { cellWidth: 30 },
                    5: { cellWidth: 25 },
                    6: { cellWidth: 20 },
                    7: { cellWidth: 20 },
                    8: { cellWidth: 20 },
                    9: { cellWidth: 20 }
                }
            });

            doc.save('curriculum-report.pdf');
        }

        // Generate Excel
        function generateExcel(data) {
            const worksheet = XLSX.utils.json_to_sheet(data.map(c => ({
                'ID': c.id,
                'Code': c.code,
                'Name': c.name,
                'Grade Level': c.grade,
                'Academic Year': c.year,
                'Semester': c.semester,
                'Status': c.status,
                'Subjects': c.subjects,
                'Teachers': c.teachers,
                'Students': c.students,
                'Description': c.description
            })));

            const workbook = XLSX.utils.book_new();
            XLSX.utils.book_append_sheet(workbook, worksheet, 'Curriculums');
            XLSX.writeFile(workbook, 'curriculum-report.xlsx');
        }

        // Generate CSV
        function generateCSV(data) {
            const headers = ['ID', 'Code', 'Name', 'Grade Level', 'Academic Year', 'Semester', 'Status', 'Subjects', 'Teachers', 'Students', 'Description'];
            const rows = data.map(c => [c.id, c.code, c.name, c.grade, c.year, c.semester, c.status, c.subjects, c.teachers, c.students, c.description]);
            
            let csv = headers.join(',') + '\n';
            rows.forEach(row => {
                csv += row.map(cell => `"${cell}"`).join(',') + '\n';
            });

            const blob = new Blob([csv], { type: 'text/csv' });
            const url = window.URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = 'curriculum-report.csv';
            a.click();
        }

        // Generate Image
        function generateImage() {
            const container = document.getElementById('curriculumContainer');
            
            html2canvas(container, {
                backgroundColor: getComputedStyle(document.documentElement).getPropertyValue('--bg'),
                scale: 2
            }).then(canvas => {
                const link = document.createElement('a');
                link.download = 'curriculum-report.jpg';
                link.href = canvas.toDataURL('image/jpeg', 0.9);
                link.click();
            });
        }

        // Auto-hide alerts
        setTimeout(() => {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                alert.style.transition = 'opacity 0.5s';
                alert.style.opacity = '0';
                setTimeout(() => alert.remove(), 500);
            });
        }, 5000);
    </script>
}