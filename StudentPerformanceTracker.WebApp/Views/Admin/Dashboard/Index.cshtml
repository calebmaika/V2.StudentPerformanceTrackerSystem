@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";  // ‚Üê Use new admin layout
}

<div class="row g-3">
    <!-- Stats Cards -->
    <div class="col-md-3">
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center p-4">
                <div class="mb-3">
                    <i class="fas fa-users fa-2x text-primary"></i>
                </div>
                <h3 class="mb-1" style="color: #2563eb; font-weight: 700;">150</h3>
                <p class="text-muted mb-0" style="font-size: 14px;">Total Students</p>
            </div>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center p-4">
                <div class="mb-3">
                    <i class="fas fa-chalkboard-teacher fa-2x" style="color: #1d4ed8;"></i>
                </div>
                <h3 class="mb-1" style="color: #1d4ed8; font-weight: 700;">25</h3>
                <p class="text-muted mb-0" style="font-size: 14px;">Total Teachers</p>
            </div>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center p-4">
                <div class="mb-3">
                    <i class="fas fa-book fa-2x" style="color: #0f172a;"></i>
                </div>
                <h3 class="mb-1" style="color: #0f172a; font-weight: 700;">12</h3>
                <p class="text-muted mb-0" style="font-size: 14px;">Active Subjects</p>
            </div>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center p-4">
                <div class="mb-3">
                    <i class="fas fa-chart-line fa-2x" style="color: #64748b;"></i>
                </div>
                <h3 class="mb-1" style="color: #64748b; font-weight: 700;">89%</h3>
                <p class="text-muted mb-0" style="font-size: 14px;">Average Grade</p>
            </div>
        </div>
    </div>
</div>

<div class="row g-3 mt-3">
    <div class="col-md-8">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white border-bottom" style="padding: 20px;">
                <h5 class="mb-0" style="font-weight: 600; color: #0f172a;">
                    <i class="fas fa-chart-bar me-2" style="color: #2563eb;"></i>
                    Performance Overview
                </h5>
            </div>
            <div class="card-body p-4">
                <p class="text-muted">Chart will go here...</p>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white border-bottom" style="padding: 20px;">
                <h5 class="mb-0" style="font-weight: 600; color: #0f172a;">
                    <i class="fas fa-bell me-2" style="color: #2563eb;"></i>
                    Recent Activities
                </h5>
            </div>
            <div class="card-body p-0">
                <div class="list-group list-group-flush">
                    <div class="list-group-item border-0 py-3">
                        <div class="d-flex align-items-start">
                            <div class="flex-shrink-0">
                                <i class="fas fa-user-plus" style="color: #2563eb;"></i>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <p class="mb-0" style="font-size: 13px; color: #0f172a;">New student registered</p>
                                <small class="text-muted">2 minutes ago</small>
                            </div>
                        </div>
                    </div>
                    <div class="list-group-item border-0 py-3">
                        <div class="d-flex align-items-start">
                            <div class="flex-shrink-0">
                                <i class="fas fa-edit" style="color: #1d4ed8;"></i>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <p class="mb-0" style="font-size: 13px; color: #0f172a;">Grade updated</p>
                                <small class="text-muted">15 minutes ago</small>
                            </div>
                        </div>
                    </div>
                    <div class="list-group-item border-0 py-3">
                        <div class="d-flex align-items-start">
                            <div class="flex-shrink-0">
                                <i class="fas fa-book" style="color: #64748b;"></i>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <p class="mb-0" style="font-size: 13px; color: #0f172a;">New subject added</p>
                                <small class="text-muted">1 hour ago</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>