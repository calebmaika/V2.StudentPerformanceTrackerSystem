@model List<StudentPerformanceTracker.Data.Entities.AdminManagement.SubjectManagement>

@{
    ViewData["Title"] = "Subject Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .subject-card {
        transition: all 0.3s ease;
        border: 1px solid var(--border-color);
        background: var(--card-bg);
        border-radius: 12px;
    }

    .subject-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
    }

    .filter-section {
        background: var(--card-bg);
        border-radius: 12px;
        padding: 24px;
        margin-bottom: 24px;
        border: 1px solid var(--border-color);
    }

    .filter-section .form-label {
        margin-bottom: 8px;
        display: block;
        font-size: 12px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .filter-section .form-control,
    .filter-section .form-select {
        height: 42px;
        border-radius: 8px;
    }

    .filter-badge {
        background: var(--primary);
        color: white;
        padding: 4px 12px;
        border-radius: 12px;
        font-size: 13px;
        font-weight: 600;
    }

    .report-dropdown {
        position: relative;
    }

    .report-btn {
        width: 100%;
        height: 42px;
        padding: 0 16px;
        border-radius: 8px;
        border: 1px solid var(--border-color);
        background: var(--card-bg);
        color: var(--text-primary);
        font-weight: 500;
        font-size: 14px;
        cursor: pointer;
        transition: all 0.2s;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .report-btn:hover {
        background: var(--primary);
        color: white;
        border-color: var(--primary);
    }

    .report-btn i:first-child {
        font-size: 16px;
    }

    .report-btn i:last-child {
        font-size: 12px;
        transition: transform 0.2s;
    }

    .report-btn:hover i:last-child {
        transform: rotate(180deg);
    }

    .report-menu {
        position: absolute;
        top: calc(100% + 8px);
        left: 0;
        right: 0;
        background: var(--card-bg);
        border: 1px solid var(--border-color);
        border-radius: 8px;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
        z-index: 1000;
        display: none;
        overflow: hidden;
    }

    .report-menu.active {
        display: block;
        animation: slideDown 0.2s ease;
    }

    @@keyframes slideDown {
        from {
            opacity: 0;
            transform: translateY(-10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .report-menu-item {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 12px 16px;
        cursor: pointer;
        transition: all 0.2s;
        color: var(--text-primary);
        text-decoration: none;
        font-size: 14px;
        border-bottom: 1px solid var(--border-color);
    }

    .report-menu-item:last-child {
        border-bottom: none;
    }

    .report-menu-item:hover {
        background: var(--light-gray);
        padding-left: 20px;
    }

    .report-menu-item i {
        width: 20px;
        text-align: center;
        font-size: 16px;
    }

    .report-menu-item.pdf i { color: #ef4444; }
    .report-menu-item.excel i { color: #10b981; }
    .report-menu-item.csv i { color: #3b82f6; }
    .report-menu-item.jpg i { color: #f59e0b; }

    .subject-info h5 {
        margin: 0 0 8px 0;
        font-size: 18px;
        font-weight: 600;
        color: var(--text-primary);
    }

    .subject-info p {
        margin: 4px 0;
        font-size: 14px;
        color: var(--text-muted);
    }

    .subject-actions {
        display: flex;
        gap: 8px;
    }

    .empty-state {
        text-align: center;
        padding: 60px 20px;
    }

    .empty-state i {
        font-size: 64px;
        color: var(--text-muted);
        opacity: 0.5;
        margin-bottom: 16px;
    }

    /* List View */
    .list-view .subject-card {
        display: flex;
        align-items: center;
        padding: 20px;
        margin-bottom: 16px;
        border-radius: 12px;
    }

    .list-view .subject-content {
        display: flex;
        align-items: center;
        flex: 1;
        gap: 20px;
    }

    .list-view .subject-badge-container {
        min-width: 100px;
    }

    [data-theme="dark"] .subject-card {
        background-color: var(--card-bg);
        border-color: var(--border-color);
    }

    [data-theme="dark"] .subject-info h5 {
        color: var(--text-primary);
    }

    [data-theme="dark"] .subject-info p {
        color: var(--text-muted);
    }

    [data-theme="dark"] .report-menu {
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.4);
    }

    @@media (max-width: 768px) {
        .filter-section {
            padding: 16px;
        }

        .filter-section .form-label {
            font-size: 11px;
        }
    }
</style>

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">
                <i class="fas fa-book text-primary"></i> Subject Management
            </h2>
            <p class="text-muted mb-0">Manage all subjects in the system</p>
        </div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add New Subject
        </a>
    </div>

    <!-- Success/Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Filter Section -->
    <div class="filter-section">
        <div class="row g-3 align-items-end">
            <!-- Search -->
            <div class="col-lg-3 col-md-6">
                <label class="form-label small fw-semibold text-muted mb-2">
                    <i class="fas fa-search me-1"></i> Search
                </label>
                <input type="text" id="searchInput" class="form-control" placeholder="Search by code or name...">
            </div>

            <!-- Code Filter -->
            <div class="col-lg-2 col-md-6">
                <label class="form-label small fw-semibold text-muted mb-2">
                    <i class="fas fa-code me-1"></i> Subject Code
                </label>
                <select id="codeFilter" class="form-select">
                    <option value="">All Subjects</option>
                    <option value="7">701</option>
                    <option value="8">801</option>
                    <option value="9">901</option>
                    <option value="10">1001</option>
                </select>
            </div>

            <!-- Status Filter -->
            <div class="col-lg-2 col-md-6">
                <label class="form-label small fw-semibold text-muted mb-2">
                    <i class="fas fa-filter me-1"></i> Status
                </label>
                <select id="statusFilter" class="form-select">
                    <option value="">All Status</option>
                    <option value="active">Active</option>
                    <option value="inactive">Inactive</option>
                </select>
            </div>

            <!-- Sort By -->
            <div class="col-lg-2 col-md-6">
                <label class="form-label small fw-semibold text-muted mb-2">
                    <i class="fas fa-sort me-1"></i> Sort By
                </label>
                <select id="sortBy" class="form-select">
                    <option value="code">Code (A-Z)</option>
                    <option value="code-desc">Code (Z-A)</option>
                    <option value="name">Name (A-Z)</option>
                    <option value="name-desc">Name (Z-A)</option>
                </select>
            </div>

            <!-- Export Report -->
            <div class="col-lg-3 col-md-12">
                <label class="form-label small fw-semibold text-muted mb-2">
                    <i class="fas fa-file-export me-1"></i> Export
                </label>
                <div class="report-dropdown w-100">
                    <button class="report-btn w-100" id="reportBtn">
                        <i class="fas fa-download"></i>
                        <span>Generate Report</span>
                        <i class="fas fa-chevron-down ms-auto"></i>
                    </button>
                    <div class="report-menu" id="reportMenu">
                        <a href="#" class="report-menu-item pdf" onclick="generateReport('pdf'); return false;">
                            <i class="fas fa-file-pdf"></i>
                            <span>Export as PDF</span>
                        </a>
                        <a href="#" class="report-menu-item excel" onclick="generateReport('excel'); return false;">
                            <i class="fas fa-file-excel"></i>
                            <span>Export as Excel</span>
                        </a>
                        <a href="#" class="report-menu-item csv" onclick="generateReport('csv'); return false;">
                            <i class="fas fa-file-csv"></i>
                            <span>Export as CSV</span>
                        </a>
                        <a href="#" class="report-menu-item jpg" onclick="generateReport('jpg'); return false;">
                            <i class="fas fa-file-image"></i>
                            <span>Export as Image</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Results Count -->
        <div class="mt-3 d-flex align-items-center gap-2">
            <i class="fas fa-info-circle text-primary"></i>
            <span class="small text-muted">Showing</span>
            <span class="filter-badge" id="resultCount">@Model.Count</span>
            <span class="small text-muted">of @Model.Count subjects</span>
        </div>
    </div>

    <!-- Subjects List -->
    <div id="subjectsContainer" class="list-view">
        @if (Model.Any())
        {
            foreach (var subject in Model)
            {
                <div class="subject-card" 
                     data-code="@subject.SubjectCode.ToLower()" 
                     data-name="@subject.SubjectName.ToLower()" 
                     data-status="@(subject.IsActive ? "active" : "inactive")"
                     data-id="@subject.SubjectId">
                    <div class="subject-content">
                        <!-- Badge Container -->
                        <div class="subject-badge-container">
                            <span class="badge bg-primary d-block" style="font-size: 14px;">@subject.SubjectCode</span>
                        </div>

                        <!-- Info -->
                        <div class="subject-info flex-grow-1">
                            <div class="d-flex align-items-center gap-2">
                                <h5>@subject.SubjectName</h5>
                                @if (subject.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Inactive</span>
                                }
                            </div>
                            @if (!string.IsNullOrEmpty(subject.Description))
                            {
                                <p class="text-muted small mb-0">@subject.Description</p>
                            }
                        </div>

                        <!-- Actions -->
                        <div class="subject-actions ms-auto">
                            <a asp-action="Details" asp-route-id="@subject.SubjectId" class="btn btn-info btn-sm" title="View Details">
                                <i class="fas fa-eye"></i> View
                            </a>
                            <a asp-action="Edit" asp-route-id="@subject.SubjectId" class="btn btn-warning btn-sm" title="Edit">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <button type="button" class="btn btn-danger btn-sm" onclick="confirmDelete(@subject.SubjectId, '@subject.SubjectCode', '@subject.SubjectName')" title="Delete">
                                <i class="fas fa-trash"></i>
                            </button>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="empty-state">
                <i class="fas fa-book"></i>
                <h4 class="text-muted">No Subjects Found</h4>
                <p class="text-muted">Get started by adding your first subject to the system.</p>
                <a asp-action="Create" class="btn btn-primary mt-3">
                    <i class="fas fa-plus"></i> Add First Subject
                </a>
            </div>
        }
    </div>

    <!-- No Results Message -->
    <div id="noResults" class="empty-state" style="display: none;">
        <i class="fas fa-search"></i>
        <h4 class="text-muted">No Subjects Match Your Search</h4>
        <p class="text-muted">Try adjusting your filters or search terms.</p>
        <button class="btn btn-secondary mt-3" onclick="resetFilters()">
            <i class="fas fa-redo"></i> Reset Filters
        </button>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete <strong id="subjectInfo"></strong>?</p>
                <p class="text-danger mb-0">
                    <i class="fas fa-exclamation-triangle"></i> This action cannot be undone.
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Add these libraries for export functionality -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf-autotable/3.5.31/jspdf.plugin.autotable.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js"></script>

    <script>
        let allCards = [];
        let filteredCards = [];

        document.addEventListener('DOMContentLoaded', function() {
            allCards = Array.from(document.querySelectorAll('.subject-card'));
            filteredCards = [...allCards];
            applyFilters();
        });

        // Report dropdown toggle
        document.getElementById('reportBtn').addEventListener('click', function(e) {
            e.stopPropagation();
            document.getElementById('reportMenu').classList.toggle('active');
        });

        // Close dropdown when clicking outside
        document.addEventListener('click', function(e) {
            const reportDropdown = document.querySelector('.report-dropdown');
            if (!reportDropdown.contains(e.target)) {
                document.getElementById('reportMenu').classList.remove('active');
            }
        });

        document.getElementById('searchInput').addEventListener('input', applyFilters);
        document.getElementById('codeFilter').addEventListener('change', applyFilters);
        document.getElementById('statusFilter').addEventListener('change', applyFilters);
        document.getElementById('sortBy').addEventListener('change', applyFilters);

        function applyFilters() {
            const searchTerm = document.getElementById('searchInput').value.toLowerCase();
            const codeFilter = document.getElementById('codeFilter').value.toLowerCase();
            const statusFilter = document.getElementById('statusFilter').value;
            const sortBy = document.getElementById('sortBy').value;

            filteredCards = allCards.filter(card => {
                const code = card.getAttribute('data-code');
                const name = card.getAttribute('data-name');
                const status = card.getAttribute('data-status');

                const matchesSearch = !searchTerm || 
                    code.includes(searchTerm) || 
                    name.includes(searchTerm);
                
                const matchesCode = !codeFilter || code.includes(codeFilter);
                const matchesStatus = !statusFilter || status === statusFilter;

                return matchesSearch && matchesCode && matchesStatus;
            });

            filteredCards.sort((a, b) => {
                switch(sortBy) {
                    case 'code':
                        return a.getAttribute('data-code').localeCompare(b.getAttribute('data-code'));
                    case 'code-desc':
                        return b.getAttribute('data-code').localeCompare(a.getAttribute('data-code'));
                    case 'name':
                        return a.getAttribute('data-name').localeCompare(b.getAttribute('data-name'));
                    case 'name-desc':
                        return b.getAttribute('data-name').localeCompare(a.getAttribute('data-name'));
                    default:
                        return 0;
                }
            });

            displayResults();
            updateResultCount();
        }

        function displayResults() {
            const container = document.getElementById('subjectsContainer');
            const noResults = document.getElementById('noResults');
            
            allCards.forEach(card => card.style.display = 'none');

            if (filteredCards.length === 0) {
                container.style.display = 'none';
                noResults.style.display = 'block';
                return;
            }

            container.style.display = 'block';
            noResults.style.display = 'none';

            filteredCards.forEach(card => {
                card.style.display = '';
                container.appendChild(card);
            });
        }

        function updateResultCount() {
            document.getElementById('resultCount').textContent = filteredCards.length;
        }

        function resetFilters() {
            document.getElementById('searchInput').value = '';
            document.getElementById('codeFilter').value = '';
            document.getElementById('statusFilter').value = '';
            document.getElementById('sortBy').value = 'code';
            applyFilters();
        }

        function confirmDelete(subjectId, subjectCode, subjectName) {
            document.getElementById('subjectInfo').textContent = `${subjectCode} - ${subjectName}`;
            document.getElementById('deleteForm').action = '/Admin/Subjects/Delete/' + subjectId;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }

        // Generate Report Function
        function generateReport(format) {
            document.getElementById('reportMenu').classList.remove('active');

            const reportData = filteredCards.map(card => {
                const code = card.getAttribute('data-code').toUpperCase();
                const name = card.querySelector('.subject-info h5').textContent.trim();
                const id = card.getAttribute('data-id');
                const status = card.getAttribute('data-status') === 'active' ? 'Active' : 'Inactive';
                const description = card.querySelector('.subject-info p')?.textContent.trim() || 'N/A';
                
                return { id, code, name, description, status };
            });

            switch(format) {
                case 'pdf':
                    generatePDF(reportData);
                    break;
                case 'excel':
                    generateExcel(reportData);
                    break;
                case 'csv':
                    generateCSV(reportData);
                    break;
                case 'jpg':
                    generateImage();
                    break;
            }
        }

        // Generate PDF
        function generatePDF(data) {
            const { jsPDF } = window.jspdf;
            const doc = new jsPDF();

            doc.setFontSize(18);
            doc.text('Subject Management Report', 14, 20);
            
            doc.setFontSize(11);
            doc.text(`Generated on: ${new Date().toLocaleDateString()}`, 14, 28);
            doc.text(`Total Subjects: ${data.length}`, 14, 35);

            doc.autoTable({
                startY: 45,
                head: [['ID', 'Code', 'Name', 'Description', 'Status']],
                body: data.map(s => [s.id, s.code, s.name, s.description, s.status]),
                theme: 'striped',
                headStyles: { fillColor: [37, 99, 235] },
                columnStyles: {
                    3: { cellWidth: 60 }
                }
            });

            doc.save('subjects-report.pdf');
        }

        // Generate Excel
        function generateExcel(data) {
            const worksheet = XLSX.utils.json_to_sheet(data.map(s => ({
                'ID': s.id,
                'Code': s.code,
                'Name': s.name,
                'Description': s.description,
                'Status': s.status
            })));

            const workbook = XLSX.utils.book_new();
            XLSX.utils.book_append_sheet(workbook, worksheet, 'Subjects');
            XLSX.writeFile(workbook, 'subjects-report.xlsx');
        }

        // Generate CSV
        function generateCSV(data) {
            const headers = ['ID', 'Code', 'Name', 'Description', 'Status'];
            const rows = data.map(s => [s.id, s.code, s.name, s.description, s.status]);
            
            let csv = headers.join(',') + '\n';
            rows.forEach(row => {
                csv += row.map(cell => `"${cell}"`).join(',') + '\n';
            });

            const blob = new Blob([csv], { type: 'text/csv' });
            const url = window.URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = 'subjects-report.csv';
            a.click();
        }

        // Generate Image
        function generateImage() {
            const container = document.getElementById('subjectsContainer');
            
            html2canvas(container, {
                backgroundColor: getComputedStyle(document.documentElement).getPropertyValue('--bg'),
                scale: 2
            }).then(canvas => {
                const link = document.createElement('a');
                link.download = 'subjects-report.jpg';
                link.href = canvas.toDataURL('image/jpeg', 0.9);
                link.click();
            });
        }

        setTimeout(() => {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                const bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);
    </script>
}