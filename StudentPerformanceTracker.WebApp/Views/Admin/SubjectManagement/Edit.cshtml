@model StudentPerformanceTracker.WebApp.Models.Admin.SubjectViewModel

@{
    ViewData["Title"] = "Edit Subject";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="mb-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index">Subjects</a></li>
                <li class="breadcrumb-item active">Edit Subject</li>
            </ol>
        </nav>
        <h2 class="mb-1">
            <i class="fas fa-edit text-warning"></i> Edit Subject
        </h2>
        <p class="text-muted">Update subject information</p>
    </div>

    <!-- Form Card -->
    <div class="row">
        <div class="col-lg-8 col-xl-6">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="SubjectId" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <!-- Basic Information Section -->
                        <h5 class="mb-3 pb-2 border-bottom">
                            <i class="fas fa-info-circle"></i> Subject Information
                        </h5>
                        
                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label asp-for="SubjectCode" class="form-label"></label>
                                <input asp-for="SubjectCode" class="form-control" style="text-transform: uppercase;">
                                <span asp-validation-for="SubjectCode" class="text-danger"></span>
                            </div>
                            <div class="col-md-8">
                                <label asp-for="SubjectName" class="form-label"></label>
                                <input asp-for="SubjectName" class="form-control">
                                <span asp-validation-for="SubjectName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <!-- Status -->
                        <div class="mb-4">
                            <div class="form-check form-switch">
                                <input asp-for="IsActive" class="form-check-input" type="checkbox">
                                <label asp-for="IsActive" class="form-check-label"></label>
                            </div>
                        </div>

                        <!-- Form Actions -->
                        <div class="d-flex justify-content-end gap-2 pt-3 border-top">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-save"></i> Update Subject
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script>
        // Auto-uppercase subject code
        document.querySelector('input[name="SubjectCode"]').addEventListener('input', function() {
            this.value = this.value.toUpperCase();
        });
    </script>
}