@model StudentPerformanceTracker.WebApp.Models.Admin.SubjectViewModel

@{
    ViewData["Title"] = "Add New Subject";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="mb-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index">Subjects</a></li>
                <li class="breadcrumb-item active">Add New Subject</li>
            </ol>
        </nav>
        <h2 class="mb-1">
            <i class="fas fa-plus-circle text-primary"></i> Add New Subject
        </h2>
        <p class="text-muted">Fill in the information below to create a new subject</p>
    </div>

    <!-- Form Card -->
    <div class="row">
        <div class="col-lg-10 col-xl-8">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <form asp-action="Create" method="post" id="createSubjectForm">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <!-- Basic Information Section -->
                        <h5 class="mb-3 pb-2 border-bottom">
                            <i class="fas fa-info-circle"></i> Basic Information
                        </h5>
                        <div class="row mb-4">
                            <div class="col-md-4 mb-3">
                                <label asp-for="SubjectCode" class="form-label"></label>
                                <input asp-for="SubjectCode" class="form-control" placeholder="e.g., MATH101" style="text-transform: uppercase;">
                                <span asp-validation-for="SubjectCode" class="text-danger"></span>
                            </div>
                            <div class="col-md-8 mb-3">
                                <label asp-for="SubjectName" class="form-label"></label>
                                <input asp-for="SubjectName" class="form-control" placeholder="e.g., Mathematics">
                                <span asp-validation-for="SubjectName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter subject description..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <!-- Academic Details Section -->
                        <h5 class="mb-3 pb-2 border-bottom">
                            <i class="fas fa-graduation-cap"></i> Academic Details
                        </h5>
                        <div class="row mb-4">
                            <div class="col-md-3 mb-3">
                                <label asp-for="Units" class="form-label"></label>
                                <input asp-for="Units" class="form-control" type="number" min="1" max="10">
                                <span asp-validation-for="Units" class="text-danger"></span>
                            </div>
                            <div class="col-md-3 mb-3">
                                <label asp-for="Category" class="form-label"></label>
                                <select asp-for="Category" class="form-select">
                                    <option value="">Select Category</option>
                                    <option value="Core">Core</option>
                                    <option value="Elective">Elective</option>
                                    <option value="Major">Major</option>
                                    <option value="Minor">Minor</option>
                                </select>
                                <span asp-validation-for="Category" class="text-danger"></span>
                            </div>
                            <div class="col-md-3 mb-3">
                                <label asp-for="Level" class="form-label"></label>
                                <select asp-for="Level" class="form-select">
                                    <option value="">Select Level</option>
                                    <option value="Grade 7">Grade 7</option>
                                    <option value="Grade 8">Grade 8</option>
                                    <option value="Grade 9">Grade 9</option>
                                    <option value="Grade 10">Grade 10</option>
                                    <option value="Grade 11">Grade 11</option>
                                    <option value="Grade 12">Grade 12</option>
                                </select>
                                <span asp-validation-for="Level" class="text-danger"></span>
                            </div>
                            <div class="col-md-3 mb-3">
                                <label asp-for="Semester" class="form-label"></label>
                                <select asp-for="Semester" class="form-select">
                                    <option value="">Select Semester</option>
                                    <option value="1st Semester">1st Semester</option>
                                    <option value="2nd Semester">2nd Semester</option>
                                    <option value="Summer">Summer</option>
                                </select>
                                <span asp-validation-for="Semester" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6 mb-3">
                                <label asp-for="SchoolYear" class="form-label"></label>
                                <input asp-for="SchoolYear" class="form-control" placeholder="e.g., 2024-2025">
                                <span asp-validation-for="SchoolYear" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Status -->
                        <div class="mb-4">
                            <div class="form-check form-switch">
                                <input asp-for="IsActive" class="form-check-input" type="checkbox" checked>
                                <label asp-for="IsActive" class="form-check-label"></label>
                            </div>
                        </div>

                        <!-- Form Actions -->
                        <div class="d-flex justify-content-end gap-2 pt-3 border-top">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Create Subject
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script>
        // Auto-uppercase subject code
        document.querySelector('input[name="SubjectCode"]').addEventListener('input', function() {
            this.value = this.value.toUpperCase();
        });
    </script>
}