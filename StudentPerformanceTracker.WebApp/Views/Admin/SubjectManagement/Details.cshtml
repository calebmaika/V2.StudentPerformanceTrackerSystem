@model StudentPerformanceTracker.WebApp.Models.Admin.SubjectViewModel

@{
    ViewData["Title"] = "Subject Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="mb-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index">Subjects</a></li>
                <li class="breadcrumb-item active">Subject Details</li>
            </ol>
        </nav>
        <div class="d-flex justify-content-between align-items-center">
            <h2 class="mb-0">
                <i class="fas fa-book text-info"></i> Subject Details
            </h2>
            <div>
                <a asp-action="Edit" asp-route-id="@Model.SubjectId" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Edit
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Main Info Card -->
        <div class="col-lg-8">
            <!-- Basic Information -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle text-primary"></i> Subject Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <small class="text-muted">Subject Code</small>
                            <p class="mb-0">
                                <strong class="badge bg-primary" style="font-size: 16px;">@Model.SubjectCode</strong>
                            </p>
                        </div>
                        <div class="col-md-8">
                            <small class="text-muted">Subject Name</small>
                            <p class="mb-0"><strong style="font-size: 18px;">@Model.SubjectName</strong></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <small class="text-muted">Description</small>
                            @if (!string.IsNullOrEmpty(Model.Description))
                            {
                                <p class="mb-0"><strong>@Model.Description</strong></p>
                            }
                            else
                            {
                                <p class="mb-0 text-muted">No description provided</p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Side Info Cards -->
        <div class="col-lg-4">
            <!-- Status Card -->
            <div class="card shadow-sm mb-4">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-toggle-on fa-3x @(Model.IsActive ? "text-success" : "text-danger")"></i>
                    </div>
                    <h5 class="mb-1">Status</h5>
                    @if (Model.IsActive)
                    {
                        <span class="badge bg-success" style="font-size: 14px;">Active</span>
                        <p class="text-muted small mt-2 mb-0">This subject is currently active and can be assigned to students</p>
                    }
                    else
                    {
                        <span class="badge bg-danger" style="font-size: 14px;">Inactive</span>
                        <p class="text-muted small mt-2 mb-0">This subject is currently inactive</p>
                    }
                </div>
            </div>

            <!-- Quick Stats Card -->
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h5 class="card-title mb-3">Quick Info</h5>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Subject ID:</span>
                        <strong>@Model.SubjectId</strong>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Code:</span>
                        <strong>@Model.SubjectCode</strong>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span>Status:</span>
                        <strong>@(Model.IsActive ? "Active" : "Inactive")</strong>
                    </div>
                </div>
            </div>

            <!-- Actions Card -->
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title mb-3">Actions</h5>
                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.SubjectId" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Edit Subject
                        </a>
                        <button type="button" class="btn btn-danger" onclick="confirmDelete(@Model.SubjectId, '@Model.SubjectCode', '@Model.SubjectName')">
                            <i class="fas fa-trash"></i> Delete Subject
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-list"></i> View All Subjects
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete <strong id="subjectInfo"></strong>?</p>
                <p class="text-danger mb-0">
                    <i class="fas fa-exclamation-triangle"></i> This action cannot be undone.
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(subjectId, subjectCode, subjectName) {
            document.getElementById('subjectInfo').textContent = `${subjectCode} - ${subjectName}`;
            document.getElementById('deleteForm').action = '/Admin/Subjects/Delete/' + subjectId;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }
    </script>
}