@{
    ViewData["Title"] = "Bootstrap Test";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-primary">
    <i class="fas fa-check-circle"></i> Bootstrap is Working!
</h1>

<div class="row mt-4">
    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Primary Card</h5>
                <p class="card-text">This card is styled with Bootstrap.</p>
                <button class="btn btn-primary">Primary Button</button>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Success Card</h5>
                <p class="card-text">Bootstrap classes are working!</p>
                <button class="btn btn-success">Success Button</button>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Danger Card</h5>
                <p class="card-text">Colors and layout working perfectly.</p>
                <button class="btn btn-danger">Danger Button</button>
            </div>
        </div>
    </div>
</div>

<div class="alert alert-success mt-4" role="alert">
    <strong>Success!</strong> Bootstrap 5 is installed and working locally.
</div>

<div class="mt-4">
    <h3>Bootstrap Features Working:</h3>
    <ul class="list-group">
        <li class="list-group-item">✅ Grid System (Row & Columns)</li>
        <li class="list-group-item">✅ Cards</li>
        <li class="list-group-item">✅ Buttons</li>
        <li class="list-group-item">✅ Alerts</li>
        <li class="list-group-item">✅ Typography</li>
        <li class="list-group-item">✅ Font Awesome Icons</li>
    </ul>
</div>