@model List<StudentPerformanceTracker.Data.Entities.AdminManagement.TeacherManagement>

@{
    ViewData["Title"] = "Teacher Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .teacher-card {
        transition: all 0.3s ease;
        border: 1px solid var(--border-color);
        background: var(--card-bg);
        border-radius: 12px; 
    }

    .teacher-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
    }

    .teacher-avatar {
        width: 80px;
        height: 80px;
        border-radius: 12px;
        object-fit: cover;
    }

    .teacher-avatar-placeholder {
        width: 80px;
        height: 80px;
        border-radius: 12px;
        background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 32px;
    }

    .filter-section {
        background: var(--card-bg);
        border-radius: 12px;
        padding: 24px;
        margin-bottom: 24px;
        border: 1px solid var(--border-color);
    }

    .filter-section .form-label {
        margin-bottom: 8px;
        display: block;
        font-size: 12px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .filter-section .form-control,
    .filter-section .form-select {
        height: 42px;
        border-radius: 8px;
    }

    .filter-badge {
        background: var(--primary);
        color: white;
        padding: 4px 12px;
        border-radius: 12px;
        font-size: 13px;
        font-weight: 600;
    }

    .report-dropdown {
        position: relative;
    }

    .report-btn {
        width: 100%;
        height: 42px;
        padding: 0 16px;
        border-radius: 8px;
        border: 1px solid var(--border-color);
        background: var(--card-bg);
        color: var(--text-primary);
        font-weight: 500;
        font-size: 14px;
        cursor: pointer;
        transition: all 0.2s;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .report-btn:hover {
        background: var(--primary);
        color: white;
        border-color: var(--primary);
    }

    .report-btn i:first-child {
        font-size: 16px;
    }

    .report-btn i:last-child {
        font-size: 12px;
        transition: transform 0.2s;
    }

    .report-btn:hover i:last-child {
        transform: rotate(180deg);
    }

    .report-menu {
        position: absolute;
        top: calc(100% + 8px);
        left: 0;
        right: 0;
        background: var(--card-bg);
        border: 1px solid var(--border-color);
        border-radius: 8px;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
        z-index: 1000;
        display: none;
        overflow: hidden;
    }

    .report-menu.active {
        display: block;
        animation: slideDown 0.2s ease;
    }

    @@keyframes slideDown {
        from {
            opacity: 0;
            transform: translateY(-10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .report-menu-item {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 12px 16px;
        cursor: pointer;
        transition: all 0.2s;
        color: var(--text-primary);
        text-decoration: none;
        font-size: 14px;
        border-bottom: 1px solid var(--border-color);
    }

    .report-menu-item:last-child {
        border-bottom: none;
    }

    .report-menu-item:hover {
        background: var(--light-gray);
        padding-left: 20px;
    }

    .report-menu-item i {
        width: 20px;
        text-align: center;
        font-size: 16px;
    }

    .report-menu-item.pdf i { color: #ef4444; }
    .report-menu-item.excel i { color: #10b981; }
    .report-menu-item.csv i { color: #3b82f6; }
    .report-menu-item.jpg i { color: #f59e0b; }

    .teacher-info h5 {
        margin: 0;
        font-size: 18px;
        font-weight: 600;
        color: var(--text-primary);
    }

    .teacher-info p {
        margin: 4px 0;
        font-size: 14px;
        color: var(--text-muted);
    }

    .teacher-meta {
        display: flex;
        gap: 16px;
        flex-wrap: wrap;
        margin-top: 12px;
    }

    .teacher-meta-item {
        display: flex;
        align-items: center;
        gap: 6px;
        font-size: 13px;
        color: var(--text-muted);
    }

    .teacher-meta-item i {
        color: var(--primary);
    }

    .teacher-actions {
        display: flex;
        gap: 8px;
    }

    .empty-state {
        text-align: center;
        padding: 60px 20px;
    }

    .empty-state i {
        font-size: 64px;
        color: var(--text-muted);
        opacity: 0.5;
        margin-bottom: 16px;
    }

    /* List View */
    .list-view .teacher-card {
        display: flex;
        align-items: center;
        padding: 20px;
        margin-bottom: 16px;
        border-radius: 12px;
    }

    .list-view .teacher-content {
        display: flex;
        align-items: center;
        flex: 1;
        gap: 20px;
    }

    [data-theme="dark"] .teacher-card {
        background-color: var(--card-bg);
        border-color: var(--border-color);
    }

    [data-theme="dark"] .teacher-info h5 {
        color: var(--text-primary);
    }

    [data-theme="dark"] .teacher-info p {
        color: var(--text-muted);
    }

    [data-theme="dark"] .report-menu {
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.4);
    }

    @@media (max-width: 768px) {
        .filter-section {
            padding: 16px;
        }

        .filter-section .form-label {
            font-size: 11px;
        }
    }
</style>

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">
                <i class="fas fa-chalkboard-teacher text-primary"></i> Teacher Management
            </h2>
            <p class="text-muted mb-0">Manage all teachers in the system</p>
        </div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add New Teacher
        </a>
    </div>

    <!-- Success/Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Filter Section -->
    <div class="filter-section">
        <div class="row g-3 align-items-end">
            <!-- Search -->
            <div class="col-lg-4 col-md-6">
                <label class="form-label small fw-semibold text-muted mb-2">
                    <i class="fas fa-search me-1"></i> Search
                </label>
                <input type="text" id="searchInput" class="form-control" placeholder="Search by name, username...">
            </div>

            <!-- Status Filter -->
            <div class="col-lg-2 col-md-6">
                <label class="form-label small fw-semibold text-muted mb-2">
                    <i class="fas fa-filter me-1"></i> Status
                </label>
                <select id="statusFilter" class="form-select">
                    <option value="">All Status</option>
                    <option value="active">Active</option>
                    <option value="inactive">Inactive</option>
                </select>
            </div>

            <!-- Sort By -->
            <div class="col-lg-2 col-md-6">
                <label class="form-label small fw-semibold text-muted mb-2">
                    <i class="fas fa-sort me-1"></i> Sort By
                </label>
                <select id="sortBy" class="form-select">
                    <option value="name">Name (A-Z)</option>
                    <option value="name-desc">Name (Z-A)</option>
                    <option value="id">ID (Low to High)</option>
                    <option value="id-desc">ID (High to Low)</option>
                    <option value="age">Age (Low to High)</option>
                    <option value="age-desc">Age (High to Low)</option>
                </select>
            </div>

            <!-- Items Per Page -->
            <div class="col-lg-2 col-md-6">
                <label class="form-label small fw-semibold text-muted mb-2">
                    <i class="fas fa-eye me-1"></i> Show
                </label>
                <select id="itemsPerPage" class="form-select">
                    <option value="6">6 per page</option>
                    <option value="12" selected>12 per page</option>
                    <option value="24">24 per page</option>
                    <option value="all">Show All</option>
                </select>
            </div>

            <!-- Export Report -->
            <div class="col-lg-2 col-md-12">
                <label class="form-label small fw-semibold text-muted mb-2">
                    <i class="fas fa-file-export me-1"></i> Export
                </label>
                <div class="report-dropdown w-100">
                    <button class="report-btn w-100" id="reportBtn">
                        <i class="fas fa-download"></i>
                        <span>Generate Report</span>
                        <i class="fas fa-chevron-down ms-auto"></i>
                    </button>
                    <div class="report-menu" id="reportMenu">
                        <a href="#" class="report-menu-item pdf" onclick="generateReport('pdf'); return false;">
                            <i class="fas fa-file-pdf"></i>
                            <span>Export as PDF</span>
                        </a>
                        <a href="#" class="report-menu-item excel" onclick="generateReport('excel'); return false;">
                            <i class="fas fa-file-excel"></i>
                            <span>Export as Excel</span>
                        </a>
                        <a href="#" class="report-menu-item csv" onclick="generateReport('csv'); return false;">
                            <i class="fas fa-file-csv"></i>
                            <span>Export as CSV</span>
                        </a>
                        <a href="#" class="report-menu-item jpg" onclick="generateReport('jpg'); return false;">
                            <i class="fas fa-file-image"></i>
                            <span>Export as Image</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Results Count -->
        <div class="mt-3 d-flex align-items-center gap-2">
            <i class="fas fa-info-circle text-primary"></i>
            <span class="small text-muted">Showing</span>
            <span class="filter-badge" id="resultCount">@Model.Count</span>
            <span class="small text-muted">of @Model.Count teachers</span>
        </div>
    </div>

    @inject StudentPerformanceTracker.Services.Curriculum.ICurriculumService CurriculumService
    @{
        var allCurriculums = await CurriculumService.GetAllCurriculumsAsync();
    }
    <!-- Teachers List -->
    <div id="teachersContainer" class="list-view">
        @if (Model.Any())
        {
            foreach (var teacher in Model)
            {
                <div class="teacher-card" 
                     data-name="@teacher.FullName.ToLower()" 
                     data-username="@teacher.Username.ToLower()" 
                     data-subjects="@(teacher.TeacherSubjects != null && teacher.TeacherSubjects.Any() ? string.Join(",", teacher.TeacherSubjects.Select(ts => ts.Subject.SubjectCode)).ToLower() : "")"
                     data-status="@(teacher.IsActive ? "active" : "inactive")"
                     data-id="@teacher.TeacherId"
                     data-age="@teacher.Age">
                    <div class="teacher-content">
                        <!-- Avatar -->
                        <div class="teacher-avatar-container">
                            @if (!string.IsNullOrEmpty(teacher.ProfilePicture))
                            {
                                <img src="@teacher.ProfilePicture" alt="@teacher.FullName" class="teacher-avatar">
                            }
                            else
                            {
                                <div class="teacher-avatar-placeholder">
                                    <i class="fas fa-user"></i>
                                </div>
                            }
                        </div>

                        <!-- Info -->
                        <div class="teacher-info flex-grow-1">
                            <div class="d-flex align-items-center gap-2">
                                <h5>@teacher.FullName</h5>
                                @if (teacher.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Inactive</span>
                                }
                            </div>
                            <p class="mb-0">@@@teacher.Username</p>
                            
                            <div class="teacher-meta">
                                <div class="teacher-meta-item">
                                    <i class="fas fa-id-badge"></i>
                                    <span>ID: @teacher.TeacherId</span>
                                </div>
                                <div class="teacher-meta-item">
                                    <i class="fas fa-birthday-cake"></i>
                                    <span>@teacher.Age years</span>
                                </div>
                                <div class="teacher-meta-item">
                                    <i class="fas fa-map-marker-alt"></i>
                                    <span>@teacher.Address</span>
                                </div>
                                @{
                                    var teacherCurriculumsCount = allCurriculums.Count(c => c.CurriculumSubjects.Any(cs => cs.TeacherId == teacher.TeacherId));
                                }
                                @if (teacherCurriculumsCount > 0)
                                {
                                    <div class="teacher-meta-item">
                                        <i class="fas fa-clipboard-list"></i>
                                        <span>@teacherCurriculumsCount Curriculum@(teacherCurriculumsCount != 1 ? "s" : "")</span>
                                    </div>
                                }
                            </div>
                        </div>

                        <!-- Actions -->
                        <div class="teacher-actions ms-auto">
                            <a asp-action="Details" asp-route-id="@teacher.TeacherId" class="btn btn-info btn-sm" title="View Details">
                                <i class="fas fa-eye"></i> View
                            </a>
                            <a asp-action="Edit" asp-route-id="@teacher.TeacherId" class="btn btn-warning btn-sm" title="Edit">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <button type="button" class="btn btn-danger btn-sm" onclick="confirmDelete(@teacher.TeacherId, '@teacher.FullName')" title="Delete">
                                <i class="fas fa-trash"></i>
                            </button>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="empty-state">
                <i class="fas fa-users"></i>
                <h4 class="text-muted">No Teachers Found</h4>
                <p class="text-muted">Get started by adding your first teacher to the system.</p>
                <a asp-action="Create" class="btn btn-primary mt-3">
                    <i class="fas fa-plus"></i> Add First Teacher
                </a>
            </div>
        }
    </div>

    <!-- No Results Message -->
    <div id="noResults" class="empty-state" style="display: none;">
        <i class="fas fa-search"></i>
        <h4 class="text-muted">No Teachers Match Your Search</h4>
        <p class="text-muted">Try adjusting your filters or search terms.</p>
        <button class="btn btn-secondary mt-3" onclick="resetFilters()">
            <i class="fas fa-redo"></i> Reset Filters
        </button>
    </div>

    <!-- Pagination -->
    <div id="pagination" class="d-flex justify-content-center mt-4"></div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete <strong id="teacherName"></strong>?</p>
                <p class="text-danger mb-0">
                    <i class="fas fa-exclamation-triangle"></i> This action cannot be undone.
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Add these libraries for export functionality -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf-autotable/3.5.31/jspdf.plugin.autotable.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js"></script>

    <script>
        let currentPage = 1;
        let itemsPerPage = 12;
        let allCards = [];
        let filteredCards = [];

        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            allCards = Array.from(document.querySelectorAll('.teacher-card'));
            filteredCards = [...allCards];
            applyFilters();
        });

        // Report dropdown toggle
        document.getElementById('reportBtn').addEventListener('click', function(e) {
            e.stopPropagation();
            document.getElementById('reportMenu').classList.toggle('active');
        });

        // Close dropdown when clicking outside
        document.addEventListener('click', function(e) {
            const reportDropdown = document.querySelector('.report-dropdown');
            if (!reportDropdown.contains(e.target)) {
                document.getElementById('reportMenu').classList.remove('active');
            }
        });

        // Search functionality
        document.getElementById('searchInput').addEventListener('input', applyFilters);
        document.getElementById('statusFilter').addEventListener('change', applyFilters);
        document.getElementById('sortBy').addEventListener('change', applyFilters);
        document.getElementById('itemsPerPage').addEventListener('change', function() {
            itemsPerPage = this.value === 'all' ? filteredCards.length : parseInt(this.value);
            currentPage = 1;
            displayPage();
        });

        // Apply all filters
        function applyFilters() {
            const searchTerm = document.getElementById('searchInput').value.toLowerCase();
            const statusFilter = document.getElementById('statusFilter').value;
            const sortBy = document.getElementById('sortBy').value;

            // Filter
            filteredCards = allCards.filter(card => {
                const name = card.getAttribute('data-name');
                const username = card.getAttribute('data-username');
                const subjects = card.getAttribute('data-subjects');
                const status = card.getAttribute('data-status');

                const matchesSearch = !searchTerm || 
                    name.includes(searchTerm) || 
                    username.includes(searchTerm) || 
                    subjects.includes(searchTerm);
                
                const matchesStatus = !statusFilter || status === statusFilter;

                return matchesSearch && matchesStatus;
            });

            // Sort
            filteredCards.sort((a, b) => {
                switch(sortBy) {
                    case 'name':
                        return a.getAttribute('data-name').localeCompare(b.getAttribute('data-name'));
                    case 'name-desc':
                        return b.getAttribute('data-name').localeCompare(a.getAttribute('data-name'));
                    case 'id':
                        return parseInt(a.getAttribute('data-id')) - parseInt(b.getAttribute('data-id'));
                    case 'id-desc':
                        return parseInt(b.getAttribute('data-id')) - parseInt(a.getAttribute('data-id'));
                    case 'age':
                        return parseInt(a.getAttribute('data-age')) - parseInt(b.getAttribute('data-age'));
                    case 'age-desc':
                        return parseInt(b.getAttribute('data-age')) - parseInt(a.getAttribute('data-age'));
                    default:
                        return 0;
                }
            });

            currentPage = 1;
            displayPage();
            updateResultCount();
        }

        // Display current page
        function displayPage() {
            const container = document.getElementById('teachersContainer');
            const noResults = document.getElementById('noResults');
            
            // Hide all cards
            allCards.forEach(card => card.style.display = 'none');

            if (filteredCards.length === 0) {
                container.style.display = 'none';
                noResults.style.display = 'block';
                document.getElementById('pagination').innerHTML = '';
                return;
            }

            container.style.display = 'block';
            noResults.style.display = 'none';

            // Calculate pagination
            const startIndex = (currentPage - 1) * itemsPerPage;
            const endIndex = startIndex + itemsPerPage;
            const pageCards = filteredCards.slice(startIndex, endIndex);

            // Show cards for current page
            pageCards.forEach(card => {
                card.style.display = '';
                container.appendChild(card);
            });

            // Update pagination
            updatePagination();
        }

        // Update pagination controls
        function updatePagination() {
            const totalPages = Math.ceil(filteredCards.length / itemsPerPage);
            const paginationContainer = document.getElementById('pagination');
            
            if (totalPages <= 1) {
                paginationContainer.innerHTML = '';
                return;
            }

            let paginationHTML = '<nav><ul class="pagination">';
            
            // Previous button
            paginationHTML += `
                <li class="page-item ${currentPage === 1 ? 'disabled' : ''}">
                    <a class="page-link" href="#" onclick="changePage(${currentPage - 1}); return false;">
                        <i class="fas fa-chevron-left"></i>
                    </a>
                </li>
            `;

            // Page numbers
            for (let i = 1; i <= totalPages; i++) {
                if (i === 1 || i === totalPages || (i >= currentPage - 2 && i <= currentPage + 2)) {
                    paginationHTML += `
                        <li class="page-item ${i === currentPage ? 'active' : ''}">
                            <a class="page-link" href="#" onclick="changePage(${i}); return false;">${i}</a>
                        </li>
                    `;
                } else if (i === currentPage - 3 || i === currentPage + 3) {
                    paginationHTML += '<li class="page-item disabled"><span class="page-link">...</span></li>';
                }
            }

            // Next button
            paginationHTML += `
                <li class="page-item ${currentPage === totalPages ? 'disabled' : ''}">
                    <a class="page-link" href="#" onclick="changePage(${currentPage + 1}); return false;">
                        <i class="fas fa-chevron-right"></i>
                    </a>
                </li>
            `;

            paginationHTML += '</ul></nav>';
            paginationContainer.innerHTML = paginationHTML;
        }

        // Change page
        function changePage(page) {
            const totalPages = Math.ceil(filteredCards.length / itemsPerPage);
            if (page < 1 || page > totalPages) return;
            currentPage = page;
            displayPage();
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }

        // Update result count
        function updateResultCount() {
            document.getElementById('resultCount').textContent = filteredCards.length;
        }

        // Reset filters
        function resetFilters() {
            document.getElementById('searchInput').value = '';
            document.getElementById('statusFilter').value = '';
            document.getElementById('sortBy').value = 'name';
            applyFilters();
        }

        // Delete confirmation
        function confirmDelete(teacherId, teacherName) {
            document.getElementById('teacherName').textContent = teacherName;
            document.getElementById('deleteForm').action = '/Admin/Teachers/Delete/' + teacherId;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }

        // Generate Report Function
        function generateReport(format) {
            // Close the dropdown
            document.getElementById('reportMenu').classList.remove('active');

            // Collect data from filtered cards
            const reportData = filteredCards.map(card => {
                const name = card.querySelector('.teacher-info h5').textContent.trim();
                const username = card.querySelector('.teacher-info p').textContent.trim();
                const id = card.getAttribute('data-id');
                const age = card.getAttribute('data-age');
                const status = card.getAttribute('data-status') === 'active' ? 'Active' : 'Inactive';
                const address = card.querySelector('.fa-map-marker-alt')?.parentElement.textContent.trim() || 'N/A';
                
                return { id, name, username, age, address, status };
            });

            switch(format) {
                case 'pdf':
                    generatePDF(reportData);
                    break;
                case 'excel':
                    generateExcel(reportData);
                    break;
                case 'csv':
                    generateCSV(reportData);
                    break;
                case 'jpg':
                    generateImage();
                    break;
            }
        }

        // Generate PDF
        function generatePDF(data) {
            const { jsPDF } = window.jspdf;
            const doc = new jsPDF();

            // Add title
            doc.setFontSize(18);
            doc.text('Teacher Management Report', 14, 20);
            
            // Add date
            doc.setFontSize(11);
            doc.text(`Generated on: ${new Date().toLocaleDateString()}`, 14, 28);
            doc.text(`Total Teachers: ${data.length}`, 14, 35);

            // Add table
            doc.autoTable({
                startY: 45,
                head: [['ID', 'Name', 'Username', 'Age', 'Address', 'Status']],
                body: data.map(t => [t.id, t.name, t.username, t.age, t.address, t.status]),
                theme: 'striped',
                headStyles: { fillColor: [37, 99, 235] }
            });

            doc.save('teachers-report.pdf');
        }

        // Generate Excel
        function generateExcel(data) {
            const worksheet = XLSX.utils.json_to_sheet(data.map(t => ({
                'ID': t.id,
                'Name': t.name,
                'Username': t.username,
                'Age': t.age,
                'Address': t.address,
                'Status': t.status
            })));

            const workbook = XLSX.utils.book_new();
            XLSX.utils.book_append_sheet(workbook, worksheet, 'Teachers');
            XLSX.writeFile(workbook, 'teachers-report.xlsx');
        }

        // Generate CSV
        function generateCSV(data) {
            const headers = ['ID', 'Name', 'Username', 'Age', 'Address', 'Status'];
            const rows = data.map(t => [t.id, t.name, t.username, t.age, t.address, t.status]);
            
            let csv = headers.join(',') + '\n';
            rows.forEach(row => {
                csv += row.map(cell => `"${cell}"`).join(',') + '\n';
            });

            const blob = new Blob([csv], { type: 'text/csv' });
            const url = window.URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = 'teachers-report.csv';
            a.click();
        }

        // Generate Image
        function generateImage() {
            const container = document.getElementById('teachersContainer');
            
            html2canvas(container, {
                backgroundColor: getComputedStyle(document.documentElement).getPropertyValue('--bg'),
                scale: 2
            }).then(canvas => {
                const link = document.createElement('a');
                link.download = 'teachers-report.jpg';
                link.href = canvas.toDataURL('image/jpeg', 0.9);
                link.click();
            });
        }

        // Auto-hide alerts
        setTimeout(() => {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                const bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);
    </script>
