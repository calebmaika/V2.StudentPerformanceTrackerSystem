@model StudentPerformanceTracker.WebApp.Models.Admin.TeacherViewModel

@{
    ViewData["Title"] = "Teacher Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="container-fluid">
    <!-- Page Header -->
    <div class="mb-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index">Teachers</a></li>
                <li class="breadcrumb-item active">Teacher Details</li>
            </ol>
        </nav>
        <div class="d-flex justify-content-between align-items-center">
            <h2 class="mb-0">
                <i class="fas fa-user-circle text-info"></i> Teacher Details
            </h2>
            <div>
                <a asp-action="Edit" asp-route-id="@Model.TeacherId" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Edit
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Profile Card -->
        <div class="col-lg-4">
            <div class="card shadow-sm mb-4">
                <div class="card-body text-center">
                    @if (!string.IsNullOrEmpty(Model.ProfilePicture))
                    {
                        <img src="@Model.ProfilePicture" alt="@Model.FullName" class="rounded-circle mb-3" style="width: 150px; height: 150px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="rounded-circle bg-secondary d-inline-flex align-items-center justify-content-center text-white mb-3" style="width: 150px; height: 150px; font-size: 60px;">
                            <i class="fas fa-user"></i>
                        </div>
                    }
                    <h4 class="mb-1">@Model.FullName</h4>
                    <p class="text-muted mb-3">@Model.Username</p>
                    @if (Model.IsActive)
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Inactive</span>
                    }
                </div>
            </div>

            <!-- Quick Stats Card -->
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title mb-3">Quick Stats</h5>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Teacher ID:</span>
                        <strong>@Model.TeacherId</strong>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Age:</span>
                        <strong>@Model.Age years</strong>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span>Status:</span>
                        <strong>@(Model.IsActive ? "Active" : "Inactive")</strong>
                    </div>
                </div>
            </div>
        </div>

        <!-- Details Card -->
        <div class="col-lg-8">
            <!-- Personal Information -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white">
                    <h5 class="mb-0">
                        <i class="fas fa-id-card text-primary"></i> Personal Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <small class="text-muted">First Name</small>
                            <p class="mb-0"><strong>@Model.FirstName</strong></p>
                        </div>
                        <div class="col-md-4">
                            <small class="text-muted">Middle Name</small>
                            <p class="mb-0"><strong>@(string.IsNullOrEmpty(Model.MiddleName) ? "N/A" : Model.MiddleName)</strong></p>
                        </div>
                        <div class="col-md-4">
                            <small class="text-muted">Last Name</small>
                            <p class="mb-0"><strong>@Model.LastName</strong></p>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <small class="text-muted">Date of Birth</small>
                            <p class="mb-0"><strong>@Model.DateOfBirth.ToString("MMMM dd, yyyy")</strong></p>
                        </div>
                        <div class="col-md-6">
                            <small class="text-muted">Age</small>
                            <p class="mb-0"><strong>@Model.Age years old</strong></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <small class="text-muted">Address</small>
                            <p class="mb-0"><strong>@Model.Address</strong></p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Account Information -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white">
                    <h5 class="mb-0">
                        <i class="fas fa-user-circle text-success"></i> Account Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <small class="text-muted">Username</small>
                            <p class="mb-0"><strong>@Model.Username</strong></p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <small class="text-muted">Account Status</small>
                            <p class="mb-0">
                                @if (Model.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Inactive</span>
                                }
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Teaching Information -->
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0">
                        <i class="fas fa-book text-info"></i> Teaching Information
                    </h5>
                </div>
                <div class="card-body">
                    <!-- General Subject Assignments -->
                    @* <h6 class="mb-2">
                        <i class="fas fa-bookmark"></i> General Subjects Assigned
                    </h6>
                    @inject StudentPerformanceTracker.Services.Subject.ISubjectService SubjectService
                    @{
                        var assignedSubjectIds = Model.SelectedSubjectIds;
                        var allSubjects = await SubjectService.GetAllSubjectsAsync();
                        var assignedSubjects = allSubjects.Where(s => assignedSubjectIds.Contains(s.SubjectId)).ToList();
                    }
                    @if (assignedSubjects != null && assignedSubjects.Any())
                    {
                        <p class="mb-3">
                            @foreach (var subject in assignedSubjects)
                            {
                                <span class="badge bg-info me-1 mb-1">@subject.SubjectCode - @subject.SubjectName</span>
                            }
                        </p>
                    }
                    else
                    {
                        <p class="mb-3 text-muted small">No general subjects assigned</p>
                    } *@

                    @* *@

                    <!-- Curriculum-Specific Assignments -->
                    <h6 class="mb-3">
                        <i class="fas fa-clipboard-list"></i> Curriculum Teaching Assignments
                    </h6>
                    <hr class="my-3" />
                    @inject StudentPerformanceTracker.Services.Curriculum.ICurriculumService CurriculumService
                    @{
                        var teacherCurriculums = await CurriculumService.GetCurriculumsByTeacherIdAsync(Model.TeacherId);
                    }
                    
                    @if (teacherCurriculums.Any())
                    {
                        <div class="mb-2">
                            <small class="text-muted">
                                <i class="fas fa-info-circle"></i> 
                                Teaching in @teacherCurriculums.Count curriculum@(teacherCurriculums.Count != 1 ? "s" : "")
                            </small>
                        </div>
                        
                        @foreach (var curriculum in teacherCurriculums)
                        {
                            var teacherSubjectsInCurriculum = curriculum.CurriculumSubjects
                                .Where(cs => cs.TeacherId == Model.TeacherId)
                                .ToList();
                            
                            <div class="list-group-item mb-2" style="border: 1px solid var(--border-color); border-radius: 8px; padding: 16px;">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div class="flex-grow-1">
                                        <h6 class="mb-2">
                                            <span class="badge bg-primary me-2">@curriculum.CurriculumCode</span>
                                            @curriculum.CurriculumName
                                        </h6>
                                        <div class="small text-muted mb-2">
                                            <i class="fas fa-calendar"></i> @curriculum.AcademicYear - @curriculum.Semester
                                            <span class="ms-3"><i class="fas fa-graduation-cap"></i> Grade @curriculum.GradeLevel</span>
                                        </div>
                                        <div>
                                            <small class="text-muted d-block mb-1"><strong>Teaching:</strong></small>
                                            @foreach (var cs in teacherSubjectsInCurriculum)
                                            {
                                                <span class="badge bg-success me-1 mb-1">
                                                    <i class="fas fa-book"></i> @cs.Subject.SubjectCode - @cs.Subject.SubjectName
                                                </span>
                                            }
                                        </div>
                                    </div>
                                    <a asp-controller="Curriculums" asp-action="Details" asp-route-id="@curriculum.CurriculumId" 
                                       class="btn btn-sm btn-outline-primary ms-3">
                                        <i class="fas fa-eye"></i> View
                                    </a>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="alert alert-info mb-0">
                            <i class="fas fa-info-circle"></i> 
                            This teacher is not currently assigned to any curriculum.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>