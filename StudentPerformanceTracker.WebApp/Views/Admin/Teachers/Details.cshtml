@model StudentPerformanceTracker.WebApp.Models.Admin.TeacherViewModel

@{
    ViewData["Title"] = "Teacher Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .back-button {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        color: #64748b;
        text-decoration: none;
        font-size: 14px;
        font-weight: 500;
        margin-bottom: 24px;
        transition: all 0.2s ease;
    }

    .back-button:hover {
        color: #2563eb;
    }

    .details-container {
        max-width: 1000px;
        margin: 0 auto;
    }

    .profile-header {
        background: white;
        border-radius: 16px;
        padding: 32px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
        border: 1px solid #e9ecef;
        margin-bottom: 24px;
    }

    .profile-header-content {
        display: flex;
        align-items: start;
        gap: 24px;
    }

    .profile-image-section {
        flex-shrink: 0;
    }

    .profile-image {
        width: 120px;
        height: 120px;
        border-radius: 16px;
        object-fit: cover;
        border: 3px solid #e9ecef;
    }

    .profile-image-placeholder {
        width: 120px;
        height: 120px;
        border-radius: 16px;
        background: linear-gradient(135deg, #2563eb 0%, #1d4ed8 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 48px;
        font-weight: 700;
        border: 3px solid #e9ecef;
    }

    .profile-info-section {
        flex: 1;
    }

    .profile-name {
        font-size: 28px;
        font-weight: 700;
        color: #0f172a;
        margin: 0 0 8px 0;
    }

    .profile-username {
        font-size: 16px;
        color: #64748b;
        margin: 0 0 16px 0;
    }

    .profile-status {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 8px 16px;
        border-radius: 20px;
        font-size: 14px;
        font-weight: 600;
        margin-bottom: 16px;
    }

    .profile-status.active {
        background: #dcfce7;
        color: #16a34a;
    }

    .profile-status.inactive {
        background: #fee2e2;
        color: #dc2626;
    }

    .profile-actions {
        display: flex;
        gap: 12px;
        margin-top: 16px;
    }

    .btn-edit {
        background: linear-gradient(135deg, #2563eb 0%, #1d4ed8 100%);
        border: none;
        color: white;
        padding: 10px 20px;
        border-radius: 10px;
        font-weight: 600;
        font-size: 14px;
        cursor: pointer;
        transition: all 0.2s ease;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        text-decoration: none;
    }

    .btn-edit:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(37, 99, 235, 0.3);
        color: white;
    }

    .btn-delete {
        background: #fee2e2;
        border: none;
        color: #dc2626;
        padding: 10px 20px;
        border-radius: 10px;
        font-weight: 600;
        font-size: 14px;
        cursor: pointer;
        transition: all 0.2s ease;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

    .btn-delete:hover {
        background: #fecaca;
    }

    .details-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 24px;
        margin-bottom: 24px;
    }

    .details-card {
        background: white;
        border-radius: 16px;
        padding: 24px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
        border: 1px solid #e9ecef;
    }

    .card-title {
        font-size: 18px;
        font-weight: 600;
        color: #0f172a;
        margin: 0 0 20px 0;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .card-title i {
        color: #2563eb;
    }

    .detail-item {
        margin-bottom: 16px;
        padding-bottom: 16px;
        border-bottom: 1px solid #f1f5f9;
    }

    .detail-item:last-child {
        margin-bottom: 0;
        padding-bottom: 0;
        border-bottom: none;
    }

    .detail-label {
        font-size: 13px;
        font-weight: 600;
        color: #64748b;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 6px;
    }

    .detail-value {
        font-size: 15px;
        color: #0f172a;
        font-weight: 500;
    }

    .detail-value.empty {
        color: #94a3b8;
        font-style: italic;
    }

    .subjects-card {
        grid-column: 1 / -1;
    }

    .subjects-list {
        background: #f8f9fa;
        border-radius: 12px;
        padding: 16px;
        margin-top: 12px;
    }

    .subjects-list p {
        margin: 0;
        color: #0f172a;
        font-size: 14px;
        line-height: 1.6;
    }
</style>

<a href="/Admin/Teachers" class="back-button">
    <i class="fas fa-arrow-left"></i>
    Back to Teacher List
</a>

<div class="details-container">
    <!-- Profile Header -->
    <div class="profile-header">
        <div class="profile-header-content">
            <div class="profile-image-section">
                @if (!string.IsNullOrEmpty(Model.ProfilePicture))
                {
                    <img src="@Model.ProfilePicture" alt="@Model.FullName" class="profile-image" />
                }
                else
                {
                    <div class="profile-image-placeholder">
                        @{
                            var initials = $"{Model.FirstName?.FirstOrDefault()}{Model.LastName?.FirstOrDefault()}";
                        }
                        @initials.ToUpper()
                    </div>
                }
            </div>

            <div class="profile-info-section">
                <h1 class="profile-name">@Model.FullName</h1>
                <p class="profile-username">
                    <i class="fas fa-at"></i>
                    @Model.Username
                </p>

                @if (Model.IsActive)
                {
                    <div class="profile-status active">
                        <i class="fas fa-check-circle"></i>
                        Active
                    </div>
                }
                else
                {
                    <div class="profile-status inactive">
                        <i class="fas fa-times-circle"></i>
                        Inactive
                    </div>
                }

                <div class="profile-actions">
                    <a href="/Admin/Teachers/Edit/@Model.TeacherId" class="btn-edit">
                        <i class="fas fa-edit"></i>
                        Edit Teacher
                    </a>
                    <button type="button" class="btn-delete" onclick="confirmDelete()">
                        <i class="fas fa-trash"></i>
                        Delete Teacher
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Details Grid -->
    <div class="details-grid">
        <!-- Personal Information -->
        <div class="details-card">
            <h2 class="card-title">
                <i class="fas fa-user"></i>
                Personal Information
            </h2>

            <div class="detail-item">
                <div class="detail-label">First Name</div>
                <div class="detail-value">@Model.FirstName</div>
            </div>

            @if (!string.IsNullOrEmpty(Model.MiddleName))
            {
                <div class="detail-item">
                    <div class="detail-label">Middle Name</div>
                    <div class="detail-value">@Model.MiddleName</div>
                </div>
            }

            <div class="detail-item">
                <div class="detail-label">Last Name</div>
                <div class="detail-value">@Model.LastName</div>
            </div>

            <div class="detail-item">
                <div class="detail-label">Date of Birth</div>
                <div class="detail-value">@Model.DateOfBirth.ToString("MMMM dd, yyyy")</div>
            </div>

            <div class="detail-item">
                <div class="detail-label">Age</div>
                <div class="detail-value">@Model.Age years old</div>
            </div>
        </div>

        <!-- Contact Information -->
        <div class="details-card">
            <h2 class="card-title">
                <i class="fas fa-map-marker-alt"></i>
                Contact Information
            </h2>

            <div class="detail-item">
                <div class="detail-label">Address</div>
                <div class="detail-value">@Model.Address</div>
            </div>

            <div class="detail-item">
                <div class="detail-label">Account Status</div>
                <div class="detail-value">
                    @if (Model.IsActive)
                    {
                        <span style="color: #16a34a; font-weight: 600;">
                            <i class="fas fa-circle" style="font-size: 8px;"></i>
                            Active
                        </span>
                    }
                    else
                    {
                        <span style="color: #dc2626; font-weight: 600;">
                            <i class="fas fa-circle" style="font-size: 8px;"></i>
                            Inactive
                        </span>
                    }
                </div>
            </div>
        </div>

        <!-- Subjects Assigned -->
        <div class="details-card subjects-card">
            <h2 class="card-title">
                <i class="fas fa-chalkboard"></i>
                Subjects Assigned
            </h2>

            @if (!string.IsNullOrEmpty(Model.SubjectsAssigned))
            {
                <div class="subjects-list">
                    <p>@Model.SubjectsAssigned</p>
                </div>
            }
            else
            {
                <div class="detail-value empty">
                    No subjects assigned yet
                </div>
            }
        </div>
    </div>
</div>

<!-- Delete Confirmation Form (Hidden) -->
<form id="deleteForm" method="post" style="display: none;">
    @Html.AntiForgeryToken()
</form>

@section Scripts {
    <script>
        function confirmDelete() {
            if (confirm('Are you sure you want to delete @Model.FullName?\n\nThis action cannot be undone.')) {
                const form = document.getElementById('deleteForm');
                form.action = '/Admin/Teachers/Delete/@Model.TeacherId';
                form.submit();
            }
        }
    </script>
}
