@{
    ViewData["Title"] = "Teacher Dashboard";
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}

<div class="container-fluid">
    <div class="mb-4">
        <h2 class="mb-1">
            <i class="fas fa-chart-line text-primary"></i> Dashboard
        </h2>
        <p class="text-muted mb-0">Welcome back, @ViewData["FullName"]!</p>
    </div>

    <div class="alert alert-success">
        <i class="fas fa-check-circle"></i> You are successfully logged in as a teacher!
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">My Curriculums</h5>
                    <p class="card-text">View and manage your assigned curriculums</p>
                    <a href="#" class="btn btn-primary">View Curriculums</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">My Students</h5>
                    <p class="card-text">View students in your classes</p>
                    <a href="#" class="btn btn-primary">View Students</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Grades</h5>
                    <p class="card-text">Input and manage student grades</p>
                    <a href="#" class="btn btn-primary">Manage Grades</a>
                </div>
            </div>
        </div>
    </div>
</div>