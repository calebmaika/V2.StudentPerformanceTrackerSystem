<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Student Performance Tracker</title>
    
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <style>
        /* Use the same CSS variables and styles from _AdminLayout.cshtml */
        /* Just change the primary color for teacher theme */
        :root {
            --primary: #ec4899;
            --primary-dark: #db2777;
            /* ... rest of the variables same as admin layout ... */
        }

        [data-theme="dark"] {
            --primary: #f472b6;
            --primary-dark: #ec4899;
            /* ... rest same as admin layout ... */
        }

        /* Copy all styles from _AdminLayout.cshtml */
        /* I'll include them in the next response if needed */
    </style>

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <div class="admin-wrapper">
        <!-- Sidebar -->
        <aside class="sidebar">
            <div class="sidebar-brand">
                <i class="fas fa-graduation-cap"></i>
                <div class="brand-text">
                    <h4>Student Tracker</h4>
                    <span>TEACHER PORTAL</span>
                </div>
            </div>

            <nav class="sidebar-menu">
                <div class="menu-section">
                    <div class="menu-section-title">MAIN</div>
                    <a href="/Teacher/Dashboard" class="menu-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Dashboard" ? "active" : "")">
                        <i class="fas fa-th-large"></i>
                        <span>Dashboard</span>
                    </a>
                </div>

                <div class="menu-section">
                    <div class="menu-section-title">TEACHING</div>
                    <a href="#" class="menu-item">
                        <i class="fas fa-clipboard-list"></i>
                        <span>My Classes</span>
                    </a>
                    <a href="#" class="menu-item">
                        <i class="fas fa-users"></i>
                        <span>My Students</span>
                    </a>
                    <a href="#" class="menu-item">
                        <i class="fas fa-chart-bar"></i>
                        <span>Performance</span>
                    </a>
                </div>

                <div class="menu-section">
                    <div class="menu-section-title">ACCOUNT</div>
                    <a href="#" class="menu-item">
                        <i class="fas fa-user-circle"></i>
                        <span>My Profile</span>
                    </a>
                </div>
            </nav>

            <div class="profile-section">
                <div class="profile-info">
                    <div class="profile-avatar">T</div>
                    <div class="profile-details">
                        <h6>@User.FindFirst("FullName")?.Value</h6>
                        <span>@@@User.Identity?.Name</span>
                    </div>
                </div>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            <div class="top-navbar">
                <h1 class="navbar-title">@ViewData["Title"]</h1>
                <div class="navbar-actions">
                    <button class="theme-toggle" id="themeToggle" title="Toggle Dark Mode">
                        <i class="fas fa-moon"></i>
                    </button>
                    
                    <button class="navbar-icon" title="Notifications">
                        <i class="fas fa-bell"></i>
                    </button>
                    
                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                        <button type="submit" class="logout-btn">
                            <i class="fas fa-sign-out-alt"></i>
                            Logout
                        </button>
                    </form>
                </div>
            </div>

            <div class="content-area">
                @RenderBody()
            </div>
        </main>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        // Dark mode toggle (same as admin)
        const currentTheme = localStorage.getItem('theme') || 'light';
        document.documentElement.setAttribute('data-theme', currentTheme);
        
        const themeIcon = document.querySelector('#themeToggle i');
        if (currentTheme === 'dark') {
            themeIcon.classList.remove('fa-moon');
            themeIcon.classList.add('fa-sun');
        }

        document.getElementById('themeToggle').addEventListener('click', function() {
            const currentTheme = document.documentElement.getAttribute('data-theme');
            const newTheme = currentTheme === 'light' ? 'dark' : 'light';
            
            document.documentElement.setAttribute('data-theme', newTheme);
            localStorage.setItem('theme', newTheme);
            
            const icon = this.querySelector('i');
            if (newTheme === 'dark') {
                icon.classList.remove('fa-moon');
                icon.classList.add('fa-sun');
            } else {
                icon.classList.remove('fa-sun');
                icon.classList.add('fa-moon');
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>