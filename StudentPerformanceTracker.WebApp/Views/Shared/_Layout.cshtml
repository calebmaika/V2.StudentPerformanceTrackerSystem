<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Student Performance Tracker</title>
    
    <!-- Bootstrap CSS (Local) -->
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    
    <!-- Font Awesome (Local) -->
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    
    <!-- Your custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">
                    <i class="fas fa-graduation-cap"></i> Student Tracker
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item">
                                <span class="navbar-text text-white me-3">
                                    <i class="fas fa-user"></i> @User.Identity.Name
                                </span>
                            </li>
                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-outline-light btn-sm">
                                        <i class="fas fa-sign-out-alt"></i> Logout
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/Admin/Account/Login">
                                    <i class="fas fa-sign-in-alt"></i> Login
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
    <main role="main">
        <div class="container mt-4">
            @RenderBody()
        </div>
    </main>
    
    <footer class="border-top footer text-muted mt-5 py-3">
        <div class="container text-center">
            &copy; 2024 - Student Performance Tracker
        </div>
    </footer>
    
    <!-- jQuery (Local) -->
    <script src="~/lib/jquery/jquery.min.js"></script>
    
    <!-- Bootstrap JS (Local) -->
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    
    <!-- Your custom JS -->
    <script src="~/js/site.js"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>