@{
    ViewData["Title"] = "Welcome";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Student Performance Tracker - Welcome</title>
    
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        :root {
            --primary: #2563eb;
            --primary-dark: #1e40af;
            --primary-light: #3b82f6;
            --admin-color: #6366f1;
            --teacher-color: #ec4899;
            --student-color: #06b6d4;
            --bg: #ffffff;
            --bg-secondary: #f8f9fa;
            --card-bg: #ffffff;
            --text-primary: #1e293b;
            --text-secondary: #64748b;
            --border-color: #e2e8f0;
            --shadow: rgba(0, 0, 0, 0.1);
        }

        body.dark-mode {
            --primary: #3b82f6;
            --primary-dark: #2563eb;
            --primary-light: #60a5fa;
            --admin-color: #818cf8;
            --teacher-color: #f472b6;
            --student-color: #22d3ee;
            --bg: #0f172a;
            --bg-secondary: #1e293b;
            --card-bg: #1e293b;
            --text-primary: #f1f5f9;
            --text-secondary: #94a3b8;
            --border-color: #334155;
            --shadow: rgba(0, 0, 0, 0.3);
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
            background: var(--bg);
            color: var(--text-primary);
            min-height: 100vh;
            transition: all 0.3s ease;
        }

        /* Navbar */
        .navbar {
            background: var(--card-bg) !important;
            box-shadow: 0 1px 3px var(--shadow);
            padding: 1rem 0;
            border-bottom: 1px solid var(--border-color);
            transition: all 0.3s ease;
        }

        .navbar-brand {
            font-size: 24px;
            font-weight: 700;
            color: var(--primary) !important;
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .navbar-brand i {
            font-size: 32px;
        }

        .theme-toggle-btn {
            width: 40px;
            height: 40px;
            border-radius: 10px;
            border: 1px solid var(--border-color);
            background: var(--bg-secondary);
            color: var(--text-primary);
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.2s ease;
        }

        .theme-toggle-btn:hover {
            transform: translateY(-2px);
            background: var(--primary);
            color: white;
            border-color: var(--primary);
        }

        body.dark-mode .theme-toggle-btn:hover {
            color: white;
        }

        /* Hero Section */
        .hero-section {
            background: var(--primary);
            padding: 80px 0 60px;
            text-align: center;
            color: white;
            position: relative;
        }

        .hero-content {
            position: relative;
            z-index: 1;
        }

        .hero-title {
            font-size: 48px;
            font-weight: 800;
            margin-bottom: 16px;
            line-height: 1.2;
        }

        .hero-subtitle {
            font-size: 18px;
            opacity: 0.9;
            margin-bottom: 12px;
            font-weight: 500;
        }

        .hero-description {
            font-size: 15px;
            opacity: 0.8;
            max-width: 600px;
            margin: 0 auto;
        }

        /* Role Selection Section */
        .role-selection {
            padding: 80px 0;
            background: var(--bg);
        }

        .section-title {
            text-align: center;
            font-size: 32px;
            font-weight: 700;
            margin-bottom: 12px;
            color: var(--text-primary);
        }

        .section-subtitle {
            text-align: center;
            font-size: 16px;
            color: var(--text-secondary);
            margin-bottom: 60px;
        }

        .role-card {
            background: var(--card-bg);
            border-radius: 16px;
            padding: 40px 32px;
            text-align: center;
            border: 1px solid var(--border-color);
            transition: all 0.3s ease;
            cursor: pointer;
            height: 100%;
        }

        .role-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 12px 24px -8px var(--shadow);
        }

        .role-card.admin:hover {
            border-color: var(--admin-color);
            box-shadow: 0 12px 24px -8px rgba(99, 102, 241, 0.25);
        }

        .role-card.teacher:hover {
            border-color: var(--teacher-color);
            box-shadow: 0 12px 24px -8px rgba(236, 72, 153, 0.25);
        }

        .role-card.student:hover {
            border-color: var(--student-color);
            box-shadow: 0 12px 24px -8px rgba(6, 182, 212, 0.25);
        }

        /* Modern Minimalist Icons */
        .role-icon {
            width: 72px;
            height: 72px;
            border-radius: 16px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 32px;
            margin: 0 auto 24px;
            transition: all 0.3s ease;
            position: relative;
        }

        .role-card.admin .role-icon {
            background: var(--admin-color);
            color: white;
        }

        .role-card.teacher .role-icon {
            background: var(--teacher-color);
            color: white;
        }

        .role-card.student .role-icon {
            background: var(--student-color);
            color: white;
        }

        .role-card:hover .role-icon {
            transform: scale(1.05);
        }

        .role-title {
            font-size: 22px;
            font-weight: 700;
            margin-bottom: 12px;
            color: var(--text-primary);
        }

        .role-description {
            font-size: 14px;
            color: var(--text-secondary);
            margin-bottom: 24px;
            line-height: 1.7;
        }

        /* Modern Flat Buttons */
        .role-btn {
            padding: 12px 28px;
            border-radius: 10px;
            border: none;
            font-weight: 600;
            font-size: 14px;
            transition: all 0.2s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            color: white;
        }

        .role-card.admin .role-btn {
            background: var(--admin-color);
        }

        .role-card.teacher .role-btn {
            background: var(--teacher-color);
        }

        .role-card.student .role-btn {
            background: var(--student-color);
        }

        .role-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px -2px rgba(0, 0, 0, 0.2);
            color: white;
        }

        .role-card.admin .role-btn:hover {
            box-shadow: 0 4px 12px -2px rgba(99, 102, 241, 0.4);
        }

        .role-card.teacher .role-btn:hover {
            box-shadow: 0 4px 12px -2px rgba(236, 72, 153, 0.4);
        }

        .role-card.student .role-btn:hover {
            box-shadow: 0 4px 12px -2px rgba(6, 182, 212, 0.4);
        }

        /* Features Section */
        .features-section {
            padding: 80px 0;
            background: var(--bg-secondary);
        }

        .features-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 24px;
            margin-top: 48px;
        }

        .feature-item {
            padding: 32px 24px;
            background: var(--card-bg);
            border-radius: 12px;
            border: 1px solid var(--border-color);
            transition: all 0.3s ease;
        }

        .feature-item:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 16px -4px var(--shadow);
        }

        .feature-icon {
            width: 48px;
            height: 48px;
            border-radius: 10px;
            background: var(--primary);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 20px;
            margin-bottom: 16px;
        }

        .feature-title {
            font-size: 17px;
            font-weight: 600;
            margin-bottom: 10px;
            color: var(--text-primary);
        }

        .feature-description {
            font-size: 14px;
            color: var(--text-secondary);
            line-height: 1.6;
        }

        /* Footer */
        .footer {
            background: var(--card-bg);
            padding: 24px 0;
            text-align: center;
            border-top: 1px solid var(--border-color);
            margin-top: 0;
        }

        .footer-text {
            color: var(--text-secondary);
            font-size: 14px;
            margin: 0;
        }

        /* Smooth transitions */
        * {
            transition: background-color 0.3s ease, color 0.3s ease, border-color 0.3s ease;
        }

        @@media (max-width: 768px) {
            .hero-title {
                font-size: 32px;
            }

            .hero-subtitle {
                font-size: 16px;
            }

            .section-title {
                font-size: 24px;
            }

            .role-card {
                margin-bottom: 24px;
            }

            .features-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-graduation-cap"></i>
                <span>Student Tracker</span>
            </a>
            <button class="theme-toggle-btn" id="themeToggle" title="Toggle dark mode">
                <i class="fas fa-moon"></i>
            </button>
        </div>
    </nav>

    @* <!-- Hero Section -->
    <section class="hero-section">
        <div class="container">
            <div class="hero-content">
                <h1 class="hero-title">Student Performance Tracker</h1>
                <p class="hero-subtitle">Modern Education Management System</p>
                <p class="hero-description">
                    Empowering educators and students with intelligent performance tracking,
                    comprehensive analytics, and seamless curriculum management.
                </p>
            </div>
        </div>
    </section> *@

    <!-- Role Selection -->
    <section class="role-selection">
        <div class="container">
            <h2 class="section-title">Choose Your Role</h2>
            <p class="section-subtitle">Select your role to access the system</p>
            
            <div class="row">
                <!-- Administrator -->
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="role-card admin" onclick="window.location.href='/Admin/Account/Login'">
                        <div class="role-icon">
                            <i class="fas fa-user-shield"></i>
                        </div>
                        <h3 class="role-title">Administrator</h3>
                        <p class="role-description">
                            Manage the entire system, configure settings, oversee teachers and students,
                            and access comprehensive reports.
                        </p>
                        <a href="/Admin/Account/Login" class="role-btn">
                            <i class="fas fa-sign-in-alt"></i>
                            <span>Admin Login</span>
                        </a>
                    </div>
                </div>

                <!-- Teacher -->
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="role-card teacher" onclick="window.location.href='/Teacher/Account/Login'">
                        <div class="role-icon">
                            <i class="fas fa-chalkboard-teacher"></i>
                        </div>
                        <h3 class="role-title">Teacher</h3>
                        <p class="role-description">
                            Manage your classes, track student performance, input grades,
                            and monitor curriculum progress.
                        </p>
                        <a href="/Teacher/Account/Login" class="role-btn">
                            <i class="fas fa-sign-in-alt"></i>
                            <span>Teacher Login</span>
                        </a>
                    </div>
                </div>

                <!-- Student -->
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="role-card student" onclick="window.location.href='/Student/Account/Login'">
                        <div class="role-icon">
                            <i class="fas fa-user-graduate"></i>
                        </div>
                        <h3 class="role-title">Student</h3>
                        <p class="role-description">
                            View your grades, track your progress, access assignments,
                            and monitor your academic performance.
                        </p>
                        <a href="/Student/Account/Login" class="role-btn">
                            <i class="fas fa-sign-in-alt"></i>
                            <span>Student Login</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    @* <!-- Features Section -->
    <section class="features-section">
        <div class="container">
            <h2 class="section-title">System Features</h2>
            <p class="section-subtitle">Everything you need for modern education management</p>
            
            <div class="features-grid">
                <div class="feature-item">
                    <div class="feature-icon">
                        <i class="fas fa-chart-line"></i>
                    </div>
                    <h4 class="feature-title">Performance Analytics</h4>
                    <p class="feature-description">
                        Comprehensive analytics and insights into student performance with visual reports.
                    </p>
                </div>

                <div class="feature-item">
                    <div class="feature-icon">
                        <i class="fas fa-clipboard-list"></i>
                    </div>
                    <h4 class="feature-title">Curriculum Management</h4>
                    <p class="feature-description">
                        Organize and manage curriculum with subject-teacher assignments seamlessly.
                    </p>
                </div>

                <div class="feature-item">
                    <div class="feature-icon">
                        <i class="fas fa-users"></i>
                    </div>
                    <h4 class="feature-title">User Management</h4>
                    <p class="feature-description">
                        Efficiently manage teachers, students, and administrators in one place.
                    </p>
                </div>

                <div class="feature-item">
                    <div class="feature-icon">
                        <i class="fas fa-moon"></i>
                    </div>
                    <h4 class="feature-title">Dark Mode Support</h4>
                    <p class="feature-description">
                        Eye-friendly dark mode for comfortable use during extended sessions.
                    </p>
                </div>
            </div>
        </div>
    </section> *@

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <p class="footer-text">&copy; 2024 Student Performance Tracker. All rights reserved.</p>
        </div>
    </footer>

    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    
    <script>
        // Dark mode toggle
        const themeToggle = document.getElementById('themeToggle');
        const themeIcon = themeToggle.querySelector('i');
        const body = document.body;

        // Check for saved theme preference
        const currentTheme = localStorage.getItem('theme') || 'light';
        if (currentTheme === 'dark') {
            body.classList.add('dark-mode');
            themeIcon.classList.remove('fa-moon');
            themeIcon.classList.add('fa-sun');
        }

        // Toggle theme
        themeToggle.addEventListener('click', function(e) {
            e.preventDefault();
            body.classList.toggle('dark-mode');
            
            if (body.classList.contains('dark-mode')) {
                themeIcon.classList.remove('fa-moon');
                themeIcon.classList.add('fa-sun');
                localStorage.setItem('theme', 'dark');
                themeToggle.title = 'Toggle light mode';
            } else {
                themeIcon.classList.remove('fa-sun');
                themeIcon.classList.add('fa-moon');
                localStorage.setItem('theme', 'light');
                themeToggle.title = 'Toggle dark mode';
            }
        });

        // Prevent card click when clicking button
        document.querySelectorAll('.role-btn').forEach(btn => {
            btn.addEventListener('click', function(e) {
                e.stopPropagation();
            });
        });
    </script>
</body>
</html>